<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:granite="http://www.adobe.com/jcr/granite/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="nt:unstructured"
    jcr:title="Composite Buttons Settings"
    sling:resourceType="cq/gui/components/authoring/dialog">
    <content
        granite:class="cmp-list--editor"
        jcr:primaryType="nt:unstructured"
        sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns"
        margin="{Boolean}false">
        <items jcr:primaryType="nt:unstructured">
            <column
                jcr:primaryType="nt:unstructured"
                sling:resourceType="granite/ui/components/coral/foundation/container">
                <items jcr:primaryType="nt:unstructured">
                    <tabs
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/coral/foundation/tabs"
                        maximized="{Boolean}false">
                        <items jcr:primaryType="nt:unstructured">
                            <buttonMainTab
                                jcr:primaryType="nt:unstructured"
                                jcr:title="Main Settings Tab"
                                sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns"
                                margin="{Boolean}true">
                                <items jcr:primaryType="nt:unstructured">
                                    <column
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/container">
                                        <items jcr:primaryType="nt:unstructured">
                                            <well
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/well">
                                                <items jcr:primaryType="nt:unstructured">
                                                    <heading
                                                        jcr:primaryType="nt:unstructured"
                                                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                        fieldDescription="Heading text for the component"
                                                        fieldLabel="Heading"
                                                        name="./heading"/>
                                                    <headingNotRequired
                                                        jcr:primaryType="nt:unstructured"
                                                        sling:resourceType="granite/ui/components/coral/foundation/form/checkbox"
                                                        fieldDescription="Select this checkbox to disable heading"
                                                        name="./headingNotRequired"
                                                        text="Select to disable heading"
                                                        uncheckedValue="false"
                                                        value="true"/>
                                                    <linkNotRequired
                                                        jcr:primaryType="nt:unstructured"
                                                        sling:resourceType="granite/ui/components/coral/foundation/form/checkbox"
                                                        fieldDescription="Select this checkbox to disable link"
                                                        name="./linkNotRequired"
                                                        text="Select to disable link"
                                                        uncheckedValue="false"
                                                        value="true"/>
                                                    <linkText
                                                        jcr:primaryType="nt:unstructured"
                                                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                        emptyText="This text is shown in link"
                                                        fieldDescription="This text is shown in link"
                                                        fieldLabel="Link Text"
                                                        name="./linkText"/>
                                                    <linkUrl
                                                        jcr:primaryType="nt:unstructured"
                                                        sling:resourceType="granite/ui/components/coral/foundation/form/pathfield"
                                                        fieldDescription="Link to pages on this site. &#xa;For External Links, use format http(s)://www.example.com"
                                                        fieldLabel="Link URL"
                                                        name="./linkUrl"
                                                        rootPath="/content"/>
                                                    <target
                                                        jcr:primaryType="nt:unstructured"
                                                        sling:resourceType="granite/ui/components/coral/foundation/form/checkbox"
                                                        fieldDescription="Selecting this checkbox will open link in new window."
                                                        name="./targetBlank"
                                                        text="Select to Open Link in New Window"
                                                        uncheckedValue="false"
                                                        value="true"/>
                                                    <noOfButtons
                                                        jcr:primaryType="nt:unstructured"
                                                        sling:resourceType="granite/ui/components/coral/foundation/form/numberfield"
                                                        defaultValue="1"
                                                        fieldDescription="Select How many buttons reqd"
                                                        fieldLabel="No. of Buttons Required"
                                                        max="{Long}6"
                                                        min="{Long}1"
                                                        name="./noOfButtons"
                                                        required="{Boolean}true"
                                                        step="{Long}1"
                                                        text="No. of Buttons Required"/>
                                                </items>
                                            </well>
                                        </items>
                                    </column>
                                </items>
                            </buttonMainTab>
                            <greyBarTab
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/include"
                                path="/apps/chinational/components/commons/cq_dialog/granite/greyBarTab"/>
                        </items>
                    </tabs>
                </items>
            </column>
        </items>
    </content>
</jcr:root>
