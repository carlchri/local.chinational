<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:granite="http://www.adobe.com/jcr/granite/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="nt:unstructured"
    jcr:title="Profile Carousel Manual"
    sling:resourceType="cq/gui/components/authoring/dialog"
    extraClientlibs="[chinational.profileCarouselManual.editor]">
    <content
        granite:class="chi-profile-carousel-manual-editDialog"
        jcr:primaryType="nt:unstructured"
        sling:resourceType="granite/ui/components/coral/foundation/container">
        <items jcr:primaryType="nt:unstructured">
            <tabs
                jcr:primaryType="nt:unstructured"
                sling:resourceType="granite/ui/components/coral/foundation/tabs"
                maximized="{Boolean}true">
                <items jcr:primaryType="nt:unstructured">
                    <mainSettingsTab
                        jcr:primaryType="nt:unstructured"
                        jcr:title="Main Settings Tab"
                        sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns"
                        margin="{Boolean}false">
                        <items jcr:primaryType="nt:unstructured">
                            <column
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/container">
                                <items jcr:primaryType="nt:unstructured">
                                    <well
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/well">
                                        <items jcr:primaryType="nt:unstructured">
                                            <headingSelection
                                                granite:class="chi-pcm-heading-selection"
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/select"
                                                fieldDescription="Enable if Carousel Heading is required."
                                                fieldLabel="Carousel Heading"
                                                name="./selectHeading">
                                                <items jcr:primaryType="nt:unstructured">
                                                    <headingNotRequired
                                                        jcr:primaryType="nt:unstructured"
                                                        selected="{Boolean}true"
                                                        text="Disable Carousel Heading"
                                                        value="headingNotRequired"/>
                                                    <headingRequired
                                                        jcr:primaryType="nt:unstructured"
                                                        text="Enable Carousel Heading"
                                                        value="headingRequired"/>
                                                </items>
                                            </headingSelection>
                                            <corouselHeading
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                emptyText="Enter heading for the Carousel"
                                                fieldDescription="This text will be used as heading for carousel"
                                                fieldLabel="Enter Carousel Heading:"
                                                name="./carouselHeading"
                                                wrapperClass="chi-pcm-carousel-heading"/>
                                        </items>
                                    </well>
                                </items>
                            </column>
                        </items>
                    </mainSettingsTab>
                    <carouselListTab
                        jcr:primaryType="nt:unstructured"
                        jcr:title="Carousel List Tab"
                        sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns"
                        margin="{Boolean}false">
                        <items jcr:primaryType="nt:unstructured">
                            <column
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/container">
                                <items jcr:primaryType="nt:unstructured">
                                    <well
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/well">
                                        <items jcr:primaryType="nt:unstructured">
                                            <listCollection
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/multifield"
                                                composite="{Boolean}true"
                                                fieldDescription="Click + to add a new entry to the carousel"
                                                fieldLabel="Carousel List Collection"
                                                name="./multiCol">
                                                <field
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/coral/foundation/container"
                                                    name="./items">
                                                    <items jcr:primaryType="nt:unstructured">
                                                        <profileTileIdentifier
                                                            jcr:primaryType="nt:unstructured"
                                                            sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                            emptyText="This field is mandatory."
                                                            fieldDescription="Identifier For Editing Profile Tiles in Edit Mode"
                                                            fieldLabel="Profile Tile Identifier:"
                                                            name="./profileTileIdentifier"
                                                            required="{Boolean}true"/>
                                                    </items>
                                                </field>
                                            </listCollection>
                                        </items>
                                    </well>
                                </items>
                            </column>
                        </items>
                    </carouselListTab>
                    <greyBarTab
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/coral/foundation/include"
                        path="/apps/chinational/components/commons/cq_dialog/granite/greyBarTab"/>
                </items>
            </tabs>
        </items>
    </content>
</jcr:root>
