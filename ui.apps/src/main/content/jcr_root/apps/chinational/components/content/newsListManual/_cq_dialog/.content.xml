<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="nt:unstructured"
    jcr:title="Article List (Manual)"
    sling:resourceType="cq/gui/components/authoring/dialog">
    <content
        jcr:primaryType="nt:unstructured"
        sling:resourceType="granite/ui/components/coral/foundation/container">
        <items jcr:primaryType="nt:unstructured">
            <tabs
                jcr:primaryType="nt:unstructured"
                sling:resourceType="granite/ui/components/coral/foundation/tabs"
                maximized="{Boolean}true">
                <items jcr:primaryType="nt:unstructured">
                    <mainSettingTab
                        jcr:primaryType="nt:unstructured"
                        jcr:title="Main Settings Tab"
                        sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns"
                        margin="{Boolean}true">
                        <items jcr:primaryType="nt:unstructured">
                            <column
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/container">
                                <items jcr:primaryType="nt:unstructured">
                                    <well
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/well">
                                        <items jcr:primaryType="nt:unstructured">
                                            <dateNotRequired
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/checkbox"
                                                fieldDescription="Check if you want article dates to not be displayed in article list"
                                                name="./dateNotRequired"
                                                text="Select to disable date"
                                                uncheckedValue="false"
                                                value="true"/>
                                            <excerptNotRequired
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/checkbox"
                                                fieldDescription="Check if you want article excerpts to not be displayed in article list"
                                                name="./excerptNotRequired"
                                                text="Select to disable excerpt"
                                                uncheckedValue="false"
                                                value="true"/>
                                            <buttonLabel
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                emptyText="Enter label for the button"
                                                fieldDescription="Enter label for SEE MORE button at bottom."
                                                fieldLabel="Button Label"
                                                name="./buttonLabel"/>
                                        </items>
                                    </well>
                                </items>
                            </column>
                        </items>
                    </mainSettingTab>
                    <newsListCollection
                        jcr:primaryType="nt:unstructured"
                        jcr:title="List Collection"
                        sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns"
                        margin="{Boolean}false">
                        <items jcr:primaryType="nt:unstructured">
                            <column
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/container">
                                <items jcr:primaryType="nt:unstructured">
                                    <newsListCollection
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/multifield"
                                        composite="{Boolean}true"
                                        fieldDescription="Click + to add a new entry to the list"
                                        fieldLabel="Article List Collection"
                                        name="./multiCol">
                                        <field
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceType="granite/ui/components/coral/foundation/container"
                                            name="./items">
                                            <items jcr:primaryType="nt:unstructured">
                                                <newsHeading
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                    emptyText="Enter Article Heading"
                                                    fieldDescription="Enter Article Heading"
                                                    fieldLabel="Article Heading"
                                                    name="./newsHeading"
                                                    renderReadOnly="{Boolean}true"
                                                    required="{Boolean}true"/>
                                                <newsDate
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/coral/foundation/form/datepicker"
                                                    emptyText="Date Format: YYYY-MM-DD"
                                                    fieldDescription="Enter Article date."
                                                    fieldLabel="Publish Date"
                                                    name="./publishDate"
                                                    type="date"/>
                                                <excerpt
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/coral/foundation/form/textarea"
                                                    emptyText="Max 350 characters allowed."
                                                    fieldDescription="Enter the excerpt text here. Max 350 characters allowed."
                                                    fieldLabel="Excerpt (max 350 characters)"
                                                    maxlength="{Long}350"
                                                    name="./excerpt"/>
                                                <linkUrl
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/coral/foundation/form/pathfield"
                                                    fieldDescription="Link to pages on this site. &#xa;For External Links, use format http(s)://www.example.com"
                                                    fieldLabel="Link URL"
                                                    name="./linkUrl"
                                                    rootPath="/content"/>
                                                <target
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/coral/foundation/form/checkbox"
                                                    fieldDescription="Selecting this checkbox will open link in new window."
                                                    name="./targetBlank"
                                                    text="Select to Open Link in New Window"
                                                    uncheckedValue="false"
                                                    value="true"/>
                                            </items>
                                        </field>
                                    </newsListCollection>
                                </items>
                            </column>
                        </items>
                    </newsListCollection>
                    <greyBarTab
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/coral/foundation/include"
                        path="/apps/chinational/components/commons/cq_dialog/granite/greyBarTab"/>
                </items>
            </tabs>
        </items>
    </content>
</jcr:root>
