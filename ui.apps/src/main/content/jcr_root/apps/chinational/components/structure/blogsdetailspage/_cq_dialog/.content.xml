<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:granite="http://www.adobe.com/jcr/granite/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="nt:unstructured"
    extraClientlibs="[chinational.blogsdetailspage.editor]">
    <content
        granite:class="chi-blogs-details-page-editDialog"
        jcr:primaryType="nt:unstructured"
        margin="{Boolean}false">
        <items jcr:primaryType="nt:unstructured">
            <tabs
                jcr:primaryType="nt:unstructured"
                maximized="{Boolean}false">
                <items jcr:primaryType="nt:unstructured">
                    <basic jcr:primaryType="nt:unstructured"/>
                    <socialmedia
                        jcr:primaryType="nt:unstructured"
                        sling:hideResource="{Boolean}true"/>
                    <cloudservices
                        jcr:primaryType="nt:unstructured"
                        sling:hideResource="{Boolean}true"/>
                    <personalization
                        jcr:primaryType="nt:unstructured"
                        sling:hideResource="{Boolean}true"/>
                    <permissions
                        jcr:primaryType="nt:unstructured"
                        sling:hideResource="{Boolean}true"/>
                    <blogsdetail
                        jcr:primaryType="nt:unstructured"
                        jcr:title="Blog Properties"
                        sling:orderBefore="advanced"
                        sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns">
                        <items jcr:primaryType="nt:unstructured">
                            <column
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/container">
                                <items jcr:primaryType="nt:unstructured">
                                    <blogHeading
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                        emptyText="Enter Blog Heading"
                                        fieldDescription="This is the blog heading at the top of the blog"
                                        fieldLabel="Blog Heading"
                                        name="./newsHeading"
                                        renderReadOnly="{Boolean}true"
                                        required="{Boolean}true"/>
                                    <blogSubHeading
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                        emptyText="Enter Blog Sub-Heading"
                                        fieldDescription="This is the blog subheading that will go under the blog heading"
                                        fieldLabel="Blog Sub-Heading"
                                        name="./newsSubHeading"
                                        renderReadOnly="{Boolean}true"/>
                                    <publishDate
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/datepicker"
                                        emptyText="Date Format: YYYY-MM-DD"
                                        fieldDescription="This is the publish date, the dateline, that will go under the heading or sub-heading"
                                        fieldLabel="Publish Date"
                                        name="./publishDate"
                                        required="{Boolean}true"
                                        type="date"/>
                                    <excerpt
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/textarea"
                                        emptyText="Max 350 characters allowed."
                                        fieldDescription="This is the summary excerpt or intro that displays on the blog's parent page and will not display on the blog details page itself. It cannot exceed 350 characters"
                                        fieldLabel="Excerpt"
                                        maxlength="{Long}350"
                                        name="./excerpt"
                                        required="{Boolean}true"/>
                                    <isFeaturedArticle
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/checkbox"
                                        fieldDescription="You may only select up to three featured blogs at a time"
                                        name="./isFeaturedArticle"
                                        text="Select to display as featured blog"
                                        uncheckedValue="false"
                                        value="true"/>
                                    <displayQuoteComponent
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/checkbox"
                                        fieldDescription="This will add a quote component to the page, which you can use to pull out a quote in the blog to add visual interest"
                                        name="./displayQuoteComponent"
                                        text="Select to enable Quote Component"
                                        uncheckedValue="false"
                                        value="true"/>
                                    <displayDynamicComponent
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/checkbox"
                                        fieldDescription="This will disable the dynamic blogs list component that automatically displays other suggested blog posts under the same parent page"
                                        name="./hideDynamicComponent"
                                        text="Select to disable Dynamic Blogs List Component"
                                        uncheckedValue="false"
                                        value="true"/>
                                </items>
                            </column>
                        </items>
                    </blogsdetail>
                    <imagedetails
                        jcr:primaryType="nt:unstructured"
                        sling:orderBefore="advanced"
                        sling:resourceType="granite/ui/components/coral/foundation/include"
                        path="/apps/chinational/components/commons/cq_dialog/granite/newsBlogImageTab"/>
                    <advanced
                        cq:showOnCreate="{Boolean}true"
                        jcr:primaryType="nt:unstructured"
                        jcr:title="Advanced"
                        sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns">
                        <items jcr:primaryType="nt:unstructured">
                            <column
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/container">
                                <items jcr:primaryType="nt:unstructured">
                                    <section1
                                        jcr:primaryType="nt:unstructured"
                                        jcr:title="Settings"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/fieldset">
                                        <items jcr:primaryType="nt:unstructured">
                                            <language
                                                granite:class="language"
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/select"
                                                disabled="{Boolean}true"
                                                emptyText="Select"
                                                fieldLabel="Language"
                                                name="./jcr:language"
                                                renderReadOnly="{Boolean}true"
                                                translateOptions="{Boolean}true">
                                                <granite:data
                                                    jcr:primaryType="nt:unstructured"
                                                    cq-msm-lockable="jcr:language"/>
                                                <datasource
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="cq/gui/components/common/datasources/languages"
                                                    addNone="{Boolean}true"/>
                                            </language>
                                            <redirect
                                                cq:showOnCreate="{Boolean}true"
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/pathfield"
                                                fieldLabel="Redirect"
                                                name="./cq:redirectTarget"
                                                rootPath="/content">
                                                <granite:data
                                                    jcr:primaryType="nt:unstructured"
                                                    cq-msm-lockable="cq:redirectPath"/>
                                            </redirect>
                                            <designs
                                                jcr:primaryType="nt:unstructured"
                                                sling:hideResource="{Boolean}true"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/pathfield"
                                                fieldLabel="Design"
                                                name="./cq:designPath"
                                                renderReadOnly="{Boolean}true"
                                                rootPath="/etc/designs">
                                                <granite:data
                                                    jcr:primaryType="nt:unstructured"
                                                    cq-msm-lockable="cq:designPath"/>
                                            </designs>
                                            <alias
                                                cq:showOnCreate="{Boolean}true"
                                                jcr:primaryType="nt:unstructured"
                                                sling:hideResource="{Boolean}true"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                fieldLabel="Alias"
                                                name="./sling:alias"
                                                renderReadOnly="{Boolean}true">
                                                <granite:data
                                                    jcr:primaryType="nt:unstructured"
                                                    cq-msm-lockable="sling:alias"/>
                                            </alias>
                                        </items>
                                    </section1>
                                </items>
                            </column>
                        </items>
                    </advanced>
                </items>
            </tabs>
        </items>
    </content>
</jcr:root>
