<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:granite="http://www.adobe.com/jcr/granite/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="nt:unstructured"
    jcr:title="Callout Tiles Settings"
    sling:resourceType="cq/gui/components/authoring/dialog">
    <content
        granite:class="cmp-list--editor"
        jcr:primaryType="nt:unstructured"
        sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns"
        margin="{Boolean}false">
        <items jcr:primaryType="nt:unstructured">
            <column
                jcr:primaryType="nt:unstructured"
                sling:resourceType="granite/ui/components/coral/foundation/container">
                <items jcr:primaryType="nt:unstructured">
                    <tabs
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/coral/foundation/tabs"
                        maximized="{Boolean}false">
                        <items jcr:primaryType="nt:unstructured">
                            <mainTab
                                jcr:primaryType="nt:unstructured"
                                jcr:title="Main Settings Tab"
                                sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns"
                                margin="{Boolean}true">
                                <items jcr:primaryType="nt:unstructured">
                                    <column
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/container">
                                        <items jcr:primaryType="nt:unstructured">
                                            <well
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/well">
                                                <items jcr:primaryType="nt:unstructured">
                                                    <headingSelection
                                                        granite:class="cq-dialog-dropdown-showhide"
                                                        jcr:primaryType="nt:unstructured"
                                                        sling:resourceType="granite/ui/components/coral/foundation/form/select"
                                                        fieldDescription="Select Yes, if Callout Tiles Heading is required."
                                                        fieldLabel="Callout Tiles Heading"
                                                        name="./selectHeading">
                                                        <items jcr:primaryType="nt:unstructured">
                                                            <headingNotRequired
                                                                jcr:primaryType="nt:unstructured"
                                                                selected="{Boolean}true"
                                                                text="No, Callout Tiles Heading Not Required."
                                                                value="headingNotRequired"/>
                                                            <headingRequired
                                                                jcr:primaryType="nt:unstructured"
                                                                text="Yes, Callout Tiles Heading Required."
                                                                value="headingRequired"/>
                                                        </items>
                                                        <granite:data
                                                            jcr:primaryType="nt:unstructured"
                                                            cq-dialog-dropdown-showhide-target=".list-option-heading-showhide-target"/>
                                                    </headingSelection>
                                                    <tileHeading
                                                        granite:class="hide list-option-heading-showhide-target"
                                                        jcr:primaryType="nt:unstructured"
                                                        sling:resourceType="granite/ui/components/coral/foundation/heading"
                                                        level="{Long}3"
                                                        text="Enter Callout Tiles Heading:">
                                                        <granite:data
                                                            jcr:primaryType="nt:unstructured"
                                                            showhidetargetvalue="headingRequired"/>
                                                    </tileHeading>
                                                    <calloutTilesHeading
                                                        granite:class="list-option-heading-showhide-target"
                                                        jcr:primaryType="nt:unstructured"
                                                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                        emptyText="Enter Callout Tiles Heading"
                                                        fieldDescription="This text will be used as heading for callout tiles"
                                                        name="./calloutTilesHeading">
                                                        <granite:data
                                                            jcr:primaryType="nt:unstructured"
                                                            showhidetargetvalue="headingRequired"/>
                                                    </calloutTilesHeading>
                                                    <noOfCalloutTiles
                                                        jcr:primaryType="nt:unstructured"
                                                        sling:resourceType="granite/ui/components/coral/foundation/form/numberfield"
                                                        defaultValue="1"
                                                        fieldDescription="Select How many Callout Tiles are required"
                                                        fieldLabel="No. of Callout Tiles Required"
                                                        max="{Long}4"
                                                        min="{Long}1"
                                                        name="./noOfCalloutTiles"
                                                        required="{Boolean}true"
                                                        step="{Long}1"
                                                        text="No. of Callout Tiles Required"/>
                                                    <greybgRequired
                                                        jcr:primaryType="nt:unstructured"
                                                        sling:resourceType="granite/ui/components/coral/foundation/form/checkbox"
                                                        fieldDescription="Select this checkbox if Grey Background is required"
                                                        name="./greybgRequired"
                                                        text="Select if Grey Background is Required"
                                                        uncheckedValue="false"
                                                        value="true"/>
                                                    <calloutOrientation
                                                        jcr:primaryType="nt:unstructured"
                                                        sling:resourceType="granite/ui/components/coral/foundation/form/select"
                                                        fieldDescription="Choose Callout Orientation"
                                                        fieldLabel="Callout Orientation"
                                                        name="./calloutOrientation">
                                                        <items jcr:primaryType="nt:unstructured">
                                                            <horizontal
                                                                jcr:primaryType="nt:unstructured"
                                                                selected="{Boolean}true"
                                                                text="Horizontal Orientation"
                                                                value="horizontalOrientation"/>
                                                            <vertical
                                                                jcr:primaryType="nt:unstructured"
                                                                text="Vertical Orientation"
                                                                value="verticalOrientation"/>
                                                        </items>
                                                    </calloutOrientation>
                                                </items>
                                            </well>
                                        </items>
                                    </column>
                                </items>
                            </mainTab>
                            <greyBarTab
                                    jcr:primaryType="nt:unstructured"
                                    jcr:title="Separator Settings"
                                    sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns"
                                    margin="{Boolean}true">
                                <items jcr:primaryType="nt:unstructured">
                                    <column
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceType="granite/ui/components/coral/foundation/container">
                                        <items jcr:primaryType="nt:unstructured">
                                            <well
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/coral/foundation/well">
                                                <items jcr:primaryType="nt:unstructured">
                                                    <bottomOption
                                                            jcr:primaryType="nt:unstructured"
                                                            sling:resourceType="granite/ui/components/foundation/form/radiogroup"
                                                            name="./bottomOption">
                                                        <items jcr:primaryType="nt:unstructured">
                                                            <option1
                                                                    jcr:primaryType="nt:unstructured"
                                                                    sling:resourceType="granite/ui/components/foundation/form/radio"
                                                                    checked="{Boolean}true"
                                                                    text="No grey separator, regular margin"
                                                                    value="default"/>
                                                            <option2
                                                                    jcr:primaryType="nt:unstructured"
                                                                    sling:resourceType="granite/ui/components/foundation/form/radio"
                                                                    text="Display grey separator"
                                                                    value="separator"/>
                                                            <option3
                                                                    jcr:primaryType="nt:unstructured"
                                                                    sling:resourceType="granite/ui/components/foundation/form/radio"
                                                                    text="No margin, no grey separator"
                                                                    value="nomargin"/>
                                                        </items>
                                                    </bottomOption>
                                                </items>
                                            </well>
                                        </items>
                                    </column>
                                </items>
                            </greyBarTab>
                        </items>
                    </tabs>
                </items>
            </column>
        </items>
    </content>
</jcr:root>
