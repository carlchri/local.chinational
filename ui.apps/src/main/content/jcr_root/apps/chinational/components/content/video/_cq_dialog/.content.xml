<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:granite="http://www.adobe.com/jcr/granite/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="nt:unstructured"
    jcr:title="Video (YouTube)"
    sling:resourceType="cq/gui/components/authoring/dialog">
    <content
        granite:class="cmp-list--editor"
        jcr:primaryType="nt:unstructured"
        sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns"
        margin="{Boolean}false">
        <items jcr:primaryType="nt:unstructured">
            <column
                jcr:primaryType="nt:unstructured"
                sling:resourceType="granite/ui/components/coral/foundation/container">
                <items jcr:primaryType="nt:unstructured">
                    <tabs
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/coral/foundation/tabs"
                        maximized="{Boolean}false">
                        <items jcr:primaryType="nt:unstructured">
                            <Tab
                                jcr:primaryType="nt:unstructured"
                                jcr:title="Video Settings&#xa;"
                                sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns"
                                margin="{Boolean}true">
                                <items jcr:primaryType="nt:unstructured">
                                    <column
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/container">
                                        <items jcr:primaryType="nt:unstructured">
                                            <well
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/well">
                                                <items jcr:primaryType="nt:unstructured">
                                                    <sectionHeading
                                                        jcr:primaryType="nt:unstructured"
                                                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                        emptyText="Enter Section Heading"
                                                        fieldDescription="This text will be used as heading for the video section"
                                                        fieldLabel="Video Heading:"
                                                        name="./sectionHeading"/>
                                                    <rightRail
                                                        jcr:primaryType="nt:unstructured"
                                                        sling:resourceType="granite/ui/components/coral/foundation/form/checkbox"
                                                        fieldDescription="Select this checkbox if video is on right rail."
                                                        name="./rightRail"
                                                        text="Select if Video is on right rail"
                                                        uncheckedValue="false"
                                                        value="true"/>
                                                    <videoUrl
                                                        jcr:primaryType="nt:unstructured"
                                                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                        fieldDescription="Video YouTube URL e.g. https://www.youtube.com/embed/yt-ID-here"
                                                        fieldLabel="Video URL (you tube only)"
                                                        name="./videoUrl"
                                                        required="{Boolean}true"
                                                        rootPath="/content"/>
                                                    <videoText
                                                        jcr:primaryType="nt:unstructured"
                                                        sling:resourceType="granite/ui/components/coral/foundation/form/textarea"
                                                        emptyText=""
                                                        fieldDescription="This text is shown below the video"
                                                        fieldLabel="Video Text"
                                                        name="./videoText"
                                                        required="{Boolean}false"/>
                                                </items>
                                            </well>
                                        </items>
                                    </column>
                                </items>
                            </Tab>
                            <thumbnailTab
                                jcr:primaryType="nt:unstructured"
                                jcr:title="ThumbNail/Icon Settings"
                                sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns"
                                margin="{Boolean}true">
                                <items jcr:primaryType="nt:unstructured">
                                    <column
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/container">
                                        <items jcr:primaryType="nt:unstructured">
                                            <well
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/well">
                                                <items jcr:primaryType="nt:unstructured">
                                                    <smallPlayIcon
                                                        jcr:primaryType="nt:unstructured"
                                                        sling:resourceType="granite/ui/components/coral/foundation/form/checkbox"
                                                        fieldDescription="Select this checkbox to use small play icon (default is large play icon)."
                                                        name="./smallPlayIcon"
                                                        text="Select if Video should use small play icon"
                                                        uncheckedValue="false"
                                                        value="true"/>
                                                    <thumbnailOption
                                                            jcr:primaryType="nt:unstructured"
                                                            sling:resourceType="granite/ui/components/foundation/form/radiogroup"
                                                            name="./thumbnailOption">
                                                            <items jcr:primaryType="nt:unstructured">
                                                                <option1
                                                                        jcr:primaryType="nt:unstructured"
                                                                        sling:resourceType="granite/ui/components/foundation/form/radio"
                                                                        text="DAM Thumbnail"
                                                                        value="damThumbnail"/>
                                                                <option2
                                                                    jcr:primaryType="nt:unstructured"
                                                                    sling:resourceType="granite/ui/components/foundation/form/radio"
                                                                    text="Default YouTube Thumbnail"
                                                                    value="mqdefault"/>
                                                                <option3
                                                                        jcr:primaryType="nt:unstructured"
                                                                        sling:resourceType="granite/ui/components/foundation/form/radio"
                                                                        text="High Resolution YouTube Thumbnail (if unavailable, users will see grey thumbnail)"
                                                                        value="maxresdefault"/>
                                                            </items>
                                                    </thumbnailOption>
                                                    <videoImage
                                                            jcr:primaryType="nt:unstructured"
                                                            sling:resourceType="granite/ui/components/coral/foundation/form/pathfield"
                                                            fieldDescription="Select thumbnail image from DAM. If it is not selected, the component will get video image from Youtube."
                                                            fieldLabel="Video Image (DAM)"
                                                            name="./videoImage"
                                                            rootPath="/content/dam">
                                                    </videoImage>
                                                </items>
                                            </well>
                                        </items>
                                    </column>
                                </items>
                            </thumbnailTab>
                            <greyBarTab
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/include"
                                path="/apps/chinational/components/commons/cq_dialog/granite/greyBarTab"/>
                        </items>
                    </tabs>
                </items>
            </column>
        </items>
    </content>
</jcr:root>
