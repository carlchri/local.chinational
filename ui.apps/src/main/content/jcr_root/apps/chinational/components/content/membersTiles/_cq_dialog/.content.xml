<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:granite="http://www.adobe.com/jcr/granite/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="nt:unstructured"
    jcr:title="Member Tiles"
    sling:resourceType="cq/gui/components/authoring/dialog"
    extraClientlibs="[chinational.membersTiles.editor]">
    <content
        granite:class="cmp-list--editor chi-members-tiles-editDialog"
        jcr:primaryType="nt:unstructured"
        sling:resourceType="granite/ui/components/coral/foundation/container">
        <items jcr:primaryType="nt:unstructured">
            <tabs
                jcr:primaryType="nt:unstructured"
                sling:resourceType="granite/ui/components/coral/foundation/tabs"
                maximized="{Boolean}true">
                <items jcr:primaryType="nt:unstructured">
                    <mainSettingsTab
                        jcr:primaryType="nt:unstructured"
                        jcr:title="Mandatory Settings"
                        sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns"
                        margin="{Boolean}false">
                        <items jcr:primaryType="nt:unstructured">
                            <column
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/container">
                                <items jcr:primaryType="nt:unstructured">
                                    <well
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/well">
                                        <items jcr:primaryType="nt:unstructured">
                                            <memberName
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                emptyText="This field is mandatory"
                                                fieldDescription="Name for the member"
                                                fieldLabel="Member Name:"
                                                name="./memberName"
                                                required="{Boolean}true"/>
                                            <memberExpertise
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                emptyText="This field is mandatory"
                                                fieldDescription="Expertise for the member:"
                                                fieldLabel="Member Expertise:"
                                                name="./memberExpertise"
                                                required="{Boolean}true"/>
                                        </items>
                                    </well>
                                </items>
                            </column>
                        </items>
                    </mainSettingsTab>
                    <otherSettingsTab
                        jcr:primaryType="nt:unstructured"
                        jcr:title="Optional Settings"
                        sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns"
                        margin="{Boolean}false">
                        <items jcr:primaryType="nt:unstructured">
                            <column
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/container">
                                <items jcr:primaryType="nt:unstructured">
                                    <well
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/well">
                                        <items jcr:primaryType="nt:unstructured">
                                            <memberImageSrc
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/pathfield"
                                                fieldDescription="Link to photo of Member"
                                                fieldLabel="Member Photo URL:"
                                                name="./memberImageSrc"
                                                rootPath="/content/dam"/>
                                            <selectLinkForMember
                                                granite:class="chi-mt-member-link-option"
                                                jcr:primaryType="nt:unstructured"
                                                sling:orderBefore="orderBy"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/select"
                                                fieldDescription="Select if a link in Member is required"
                                                fieldLabel="Option for Member's detail page:"
                                                name="./selectLinkForMember">
                                                <items jcr:primaryType="nt:unstructured">
                                                    <linkToPageReqd
                                                        jcr:primaryType="nt:unstructured"
                                                        text="Member has a profile page"
                                                        value="linkToPageReqd"/>
                                                    <linkToPageNotReqd
                                                        jcr:primaryType="nt:unstructured"
                                                        selected="{Boolean}true"
                                                        text="Member doesn't have a page"
                                                        value="linkToPageNotReqd"/>
                                                </items>
                                            </selectLinkForMember>
                                            <memberLinkTo
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/pathfield"
                                                fieldDescription="Provide internal or external link for Member's Page"
                                                fieldLabel="Member's Link Page URL:"
                                                name="./memberLinkTo"
                                                rootPath="/content/dam"
                                                wrapperClass="chi-mt-member-link-url"/>
                                            <targetBlank
                                                granite:class="chi-mt-link-target"
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/checkbox"
                                                name="./targetBlank"
                                                text="Select to Open Link in New Window"
                                                uncheckedValue="false"
                                                value="true"/>
                                            <memberLogo
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/pathfield"
                                                fieldDescription="Provide image source for member logo"
                                                fieldLabel="Member's Logo:"
                                                name="./memberLogo"
                                                rootPath="/content/dam"/>
                                        </items>
                                    </well>
                                </items>
                            </column>
                        </items>
                    </otherSettingsTab>
                </items>
            </tabs>
        </items>
    </content>
</jcr:root>
