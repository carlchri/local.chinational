<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:granite="http://www.adobe.com/jcr/granite/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="nt:unstructured"
    jcr:title="Icons Row"
    sling:resourceType="cq/gui/components/authoring/dialog">
    <content
        jcr:primaryType="nt:unstructured"
        sling:resourceType="granite/ui/components/coral/foundation/container">
        <items jcr:primaryType="nt:unstructured">
            <tabs
                jcr:primaryType="nt:unstructured"
                sling:resourceType="granite/ui/components/coral/foundation/tabs"
                maximized="{Boolean}true">
                <items jcr:primaryType="nt:unstructured">
                    <mainSettingsTab
                        jcr:primaryType="nt:unstructured"
                        jcr:title="Main Settings Tab"
                        sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns"
                        margin="{Boolean}false">
                        <items jcr:primaryType="nt:unstructured">
                            <column
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/container">
                                <items jcr:primaryType="nt:unstructured">
                                    <listCollection
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/multifield"
                                        composite="{Boolean}true"
                                        fieldDescription="Click + to add a new entry to the list"
                                        fieldLabel="Icon Collection"
                                        name="./multiCol">
                                        <field
                                            jcr:primaryType="nt:unstructured"
                                            sling:resourceType="granite/ui/components/coral/foundation/container"
                                            name="./icons">
                                            <items jcr:primaryType="nt:unstructured">
                                                <iconOptions
                                                    granite:class="cq-dialog-dropdown-showhide"
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:orderBefore="orderBy"
                                                    sling:resourceType="granite/ui/components/coral/foundation/form/select"
                                                    fieldDescription="Select an icon option"
                                                    fieldLabel="Select an Icon Option:"
                                                    name="./iconOption">
                                                    <items jcr:primaryType="nt:unstructured">
                                                        <preDefinedIcons
                                                            jcr:primaryType="nt:unstructured"
                                                            selected="{Boolean}true"
                                                            text="Use pre-defined icon"
                                                            value="icon-pre"/>
                                                        <customIcons
                                                            jcr:primaryType="nt:unstructured"
                                                            text="Use Custom Icon"
                                                            value="icon-custom"/>
                                                    </items>
                                                    <granite:data
                                                        jcr:primaryType="nt:unstructured"
                                                        cq-dialog-dropdown-showhide-target=".list-option-icon-showhide-target"/>
                                                </iconOptions>
                                                <iconTypeFieldLabel
                                                    granite:class="list-option-icon-showhide-target"
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/coral/foundation/heading"
                                                    level="{Long}4"
                                                    text="Choose Pre-defined Icon:">
                                                    <granite:data
                                                        jcr:primaryType="nt:unstructured"
                                                        showhidetargetvalue="icon-pre"/>
                                                </iconTypeFieldLabel>
                                                <iconSelector
                                                    granite:class="list-option-icon-showhide-target"
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:orderBefore="orderBy"
                                                    sling:resourceType="granite/ui/components/coral/foundation/form/select"
                                                    name="./iconType">
                                                    <datasource
                                                        jcr:primaryType="nt:unstructured"
                                                        sling:resourceType="/apps/chinational/components/datasource"
                                                        path="/etc/config/chinational/components/iconSelector"/>
                                                    <granite:data
                                                        jcr:primaryType="nt:unstructured"
                                                        showhidetargetvalue="icon-pre"/>
                                                </iconSelector>
                                                <iconImageFieldLabel
                                                    granite:class="list-option-icon-showhide-target"
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/coral/foundation/heading"
                                                    level="{Long}4"
                                                    text="Custom Icon Image URL [it is strongly recommended to use assets in a 1:1 (square) ratio, ideally 50x50]">
                                                    <granite:data
                                                        jcr:primaryType="nt:unstructured"
                                                        showhidetargetvalue="icon-custom"/>
                                                </iconImageFieldLabel>
                                                <iconImageSrc
                                                    granite:class="list-option-icon-showhide-target"
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/coral/foundation/form/pathfield"
                                                    name="./iconImageSrc"
                                                    rootPath="/content/dam">
                                                    <granite:data
                                                        jcr:primaryType="nt:unstructured"
                                                        showhidetargetvalue="icon-custom"/>
                                                </iconImageSrc>
                                                <linkUrl
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/coral/foundation/form/pathfield"
                                                    fieldDescription="Link to pages on this site. &#xa;For External Links, use format http(s)://www.example.com"
                                                    fieldLabel="Icon Link URL"
                                                    name="./linkUrl"
                                                    rootPath="/content"/>
                                                <target
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/coral/foundation/form/checkbox"
                                                    fieldDescription="Selecting this checkbox will open link in new window."
                                                    name="./targetBlank"
                                                    text="Select to Open Link in New Window"
                                                    uncheckedValue="false"
                                                    value="true"/>
                                                <divider
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/coral/foundation/heading"
                                                    level="{Long}1"
                                                    text="_____________________________"/>
                                            </items>
                                        </field>
                                    </listCollection>
                                </items>
                            </column>
                        </items>
                    </mainSettingsTab>
                    <rightRailTab
                        jcr:primaryType="nt:unstructured"
                        jcr:title="Right Rail Settings"
                        sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns"
                        margin="{Boolean}true">
                        <items jcr:primaryType="nt:unstructured">
                            <column
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/container">
                                <items jcr:primaryType="nt:unstructured">
                                    <well
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/well">
                                        <items jcr:primaryType="nt:unstructured">
                                            <rightRailIcons
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/checkbox"
                                                fieldDescription="Select this checkbox only if Row of Icons is added in right rail"
                                                name="./rightRailIcons"
                                                text="Select if Row of Icons is in right rail"
                                                uncheckedValue="false"
                                                value="true"/>
                                            <iconsRowHeading
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                emptyText="Required only if Row of Icons is used in Right Rail. Otherwise leave empty."
                                                fieldDescription="Required only if Row of Icons is used in Right Rail.This text will be used as heading for row of icons."
                                                fieldLabel="List Heading"
                                                name="./iconsRowHeading"/>
                                        </items>
                                    </well>
                                </items>
                            </column>
                        </items>
                    </rightRailTab>
                    <greyBarTab
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/coral/foundation/include"
                        path="/apps/chinational/components/commons/cq_dialog/granite/greyBarTab"/>
                </items>
            </tabs>
        </items>
    </content>
</jcr:root>
