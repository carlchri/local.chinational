<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:granite="http://www.adobe.com/jcr/granite/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="nt:unstructured"
    jcr:title="Dynamic Tiles (News/Blogs) Settings"
    sling:resourceType="cq/gui/components/authoring/dialog">
    <content
        granite:class="cmp-list--editor"
        jcr:primaryType="nt:unstructured"
        sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns"
        margin="{Boolean}false">
        <items jcr:primaryType="nt:unstructured">
            <column
                jcr:primaryType="nt:unstructured"
                sling:resourceType="granite/ui/components/coral/foundation/container">
                <items jcr:primaryType="nt:unstructured">
                    <tabs
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/coral/foundation/tabs"
                        maximized="{Boolean}false">
                        <items jcr:primaryType="nt:unstructured">
                            <mainTab
                                jcr:primaryType="nt:unstructured"
                                jcr:title="Content Tiles Main Settings Tab"
                                sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns"
                                margin="{Boolean}true">
                                <items jcr:primaryType="nt:unstructured">
                                    <column
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/container">
                                        <items jcr:primaryType="nt:unstructured">
                                            <well
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/well">
                                                <items jcr:primaryType="nt:unstructured">
                                                    <headingSelection
                                                        granite:class="cq-dialog-dropdown-showhide"
                                                        jcr:primaryType="nt:unstructured"
                                                        sling:resourceType="granite/ui/components/coral/foundation/form/select"
                                                        fieldDescription="Select Yes, if Content Tile Heading is required."
                                                        fieldLabel="Enable/Disable Content Tile Heading"
                                                        name="./selectHeading">
                                                        <items jcr:primaryType="nt:unstructured">
                                                            <headingNotRequired
                                                                jcr:primaryType="nt:unstructured"
                                                                selected="{Boolean}true"
                                                                text="Disable content tile heading"
                                                                value="headingNotRequired"/>
                                                            <headingRequired
                                                                jcr:primaryType="nt:unstructured"
                                                                text="Enable content tile heading"
                                                                value="headingRequired"/>
                                                        </items>
                                                        <granite:data
                                                            jcr:primaryType="nt:unstructured"
                                                            cq-dialog-dropdown-showhide-target=".list-option-heading-showhide-target"/>
                                                    </headingSelection>
                                                    <contentTilesHeading
                                                        granite:class="list-option-heading-showhide-target"
                                                        jcr:primaryType="nt:unstructured"
                                                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                        emptyText="Enter Content Tiles Heading"
                                                        fieldLabel="Content Tiles Heading:"
                                                        fieldDescription="These settings only apply to Content Tiles and not Dynamic List or general tile components."
                                                        name="./contentTilesHeading">
                                                        <granite:data
                                                            jcr:primaryType="nt:unstructured"
                                                            showhidetargetvalue="headingRequired"/>
                                                    </contentTilesHeading>
                                                    <articleSelection
                                                        jcr:primaryType="nt:unstructured"
                                                        sling:resourceType="granite/ui/components/coral/foundation/form/select"
                                                        fieldDescription="Based on requirement, select News or Blogs to generate Tiles."
                                                        fieldLabel="Article Type Selection to Generate Tiles"
                                                        name="./selectArticleType">
                                                        <items jcr:primaryType="nt:unstructured">
                                                            <news
                                                                jcr:primaryType="nt:unstructured"
                                                                selected="{Boolean}true"
                                                                text="News"
                                                                value="news"/>
                                                            <blogs
                                                                jcr:primaryType="nt:unstructured"
                                                                text="Blogs"
                                                                value="blogs"/>
                                                        </items>
                                                    </articleSelection>
                                                    <parentPage
                                                        jcr:primaryType="nt:unstructured"
                                                        sling:resourceType="granite/ui/components/coral/foundation/form/pathfield"
                                                        fieldDescription="Choose page under which news details page are stored"
                                                        fieldLabel="Parent Page to Generate Dynamic List:"
                                                        name="./parentPage"
                                                        required="{Boolean}true"
                                                        rootPath="/content"/>
                                                </items>
                                            </well>
                                        </items>
                                    </column>
                                </items>
                            </mainTab>
                            <toggleOptions
                                jcr:primaryType="nt:unstructured"
                                jcr:title="Dynamic Tiles Optional Settings"
                                sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns"
                                margin="{Boolean}true">
                                <items jcr:primaryType="nt:unstructured">
                                    <column
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/container">
                                        <items jcr:primaryType="nt:unstructured">
                                            <well
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/well">
                                                <items jcr:primaryType="nt:unstructured">
                                                    <imageNotRequired
                                                        jcr:primaryType="nt:unstructured"
                                                        sling:resourceType="granite/ui/components/coral/foundation/form/checkbox"
                                                        fieldDescription="Select this checkbox to disable image"
                                                        name="./imageNotRequired"
                                                        text="Select to Disable Images for All Dynamic Tiles"
                                                        uncheckedValue="false"
                                                        value="true"/>
                                                    <dateNotRequired
                                                        jcr:primaryType="nt:unstructured"
                                                        sling:resourceType="granite/ui/components/coral/foundation/form/checkbox"
                                                        fieldDescription="Select this checkbox to disable date"
                                                        name="./dateNotRequired"
                                                        text="Select to Disable Dates for All Dynamic Tiles"
                                                        uncheckedValue="false"
                                                        value="true"/>
                                                    <tagFilterRequired
                                                        jcr:primaryType="nt:unstructured"
                                                        sling:resourceType="granite/ui/components/coral/foundation/form/checkbox"
                                                        fieldDescription="Select this checkbox to enable Tag Filter"
                                                        name="./tagFilterRequired"
                                                        text="Select to enable Tag Filter"
                                                        uncheckedValue="false"
                                                        defaultChecked="{Boolean}true"
                                                        value="true"/>
                                                    <listOnRightNotRequired
                                                        jcr:primaryType="nt:unstructured"
                                                        sling:resourceType="granite/ui/components/coral/foundation/form/checkbox"
                                                        fieldDescription="Select this checkbox to enable list on right"
                                                        name="./listOnRightNotRequired"
                                                        text="Select to Enable News/Blog List on Right"
                                                        uncheckedValue="false"
                                                        value="true"/>
                                                    <listHeading
                                                        jcr:primaryType="nt:unstructured"
                                                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                        emptyText="Enter heading for the list "
                                                        fieldDescription="This text will be used as heading for all links"
                                                        fieldLabel="News/Blog List Heading"
                                                        name="./linkHeading"/>
                                                </items>
                                            </well>
                                        </items>
                                    </column>
                                </items>
                            </toggleOptions>
                            <buttonTab
                                jcr:primaryType="nt:unstructured"
                                jcr:title="Button Tab"
                                sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns"
                                margin="{Boolean}true">
                                <items jcr:primaryType="nt:unstructured">
                                    <column
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/container">
                                        <items jcr:primaryType="nt:unstructured">
                                            <well
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/well">
                                                <items jcr:primaryType="nt:unstructured">
                                                    <buttonSelection
                                                        granite:class="cq-dialog-dropdown-showhide"
                                                        jcr:primaryType="nt:unstructured"
                                                        sling:resourceType="granite/ui/components/coral/foundation/form/select"
                                                        fieldLabel="Optional Link Button"
                                                        name="./selectButton">
                                                        <items jcr:primaryType="nt:unstructured">
                                                            <buttonNotRequired
                                                                jcr:primaryType="nt:unstructured"
                                                                selected="{Boolean}true"
                                                                text="Disable Button"
                                                                value="buttonNotRequired"/>
                                                            <buttonRequired
                                                                jcr:primaryType="nt:unstructured"
                                                                text="Enable Button"
                                                                value="buttonRequired"/>
                                                        </items>
                                                        <granite:data
                                                            jcr:primaryType="nt:unstructured"
                                                            cq-dialog-dropdown-showhide-target=".list-option-button-showhide-target"/>
                                                    </buttonSelection>
                                                    <buttonText
                                                        granite:class="list-option-button-showhide-target"
                                                        jcr:primaryType="nt:unstructured"
                                                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                        fieldDescription="This text will be used on button below items"
                                                        fieldLabel="Button Label:"
                                                        emptyText="SEE ALL NEWS"
                                                        name="./linkText">
                                                        <granite:data
                                                            jcr:primaryType="nt:unstructured"
                                                            showhidetargetvalue="buttonRequired"/>
                                                    </buttonText>
                                                    <linkUrl
                                                        granite:class="list-option-button-showhide-target"
                                                        jcr:primaryType="nt:unstructured"
                                                        sling:resourceType="granite/ui/components/coral/foundation/form/pathfield"
                                                        fieldDescription="AEM path or external link. Use this format for external links https://www.example.com."
                                                        fieldLabel="Link AEM path/URL"
                                                        name="./linkUrl"
                                                        rootPath="/content">
                                                        <granite:data
                                                            jcr:primaryType="nt:unstructured"
                                                            showhidetargetvalue="buttonRequired"/>
                                                    </linkUrl>
                                                    <target
                                                        granite:class="list-option-button-showhide-target"
                                                        jcr:primaryType="nt:unstructured"
                                                        sling:resourceType="granite/ui/components/coral/foundation/form/checkbox"
                                                        name="./targetBlank"
                                                        text="Select to Open Link in New Window"
                                                        uncheckedValue="false"
                                                        value="true">
                                                        <granite:data
                                                            jcr:primaryType="nt:unstructured"
                                                            showhidetargetvalue="buttonRequired"/>
                                                    </target>
                                                </items>
                                            </well>
                                        </items>
                                    </column>
                                </items>
                            </buttonTab>
                            <greyBarTab
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/include"
                                path="/apps/chinational/components/commons/cq_dialog/granite/greyBarTab"/>
                        </items>
                    </tabs>
                </items>
            </column>
        </items>
    </content>
</jcr:root>
