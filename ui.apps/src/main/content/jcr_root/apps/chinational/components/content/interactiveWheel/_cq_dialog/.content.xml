<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:granite="http://www.adobe.com/jcr/granite/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="nt:unstructured"
    jcr:title="Interactive Wheel"
    sling:resourceType="cq/gui/components/authoring/dialog">
    <content
    	granite:class="cmp-list--editor"
        jcr:primaryType="nt:unstructured"
        sling:resourceType="granite/ui/components/coral/foundation/container">
        <items jcr:primaryType="nt:unstructured">
            <tabs
                jcr:primaryType="nt:unstructured"
                sling:resourceType="granite/ui/components/coral/foundation/tabs"
                maximized="{Boolean}true">
                <items jcr:primaryType="nt:unstructured">
                    <mainSettingsTab
                        jcr:primaryType="nt:unstructured"
                        jcr:title="General Settings"
                        sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns"
                        margin="{Boolean}false">
                        <items jcr:primaryType="nt:unstructured">
                            <column
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/container">
                                <items jcr:primaryType="nt:unstructured">
                                    <well
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/well">
                                        <items jcr:primaryType="nt:unstructured">
                                        	<title
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                emptyText="This field is mandatory"
                                                fieldLabel="Heading"
                                                name="./title"
                                                required="{Boolean}true"/>
                                            <initial_text
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="cq/gui/components/authoring/dialog/richtext"
                                                useFixedInlineToolbar="{Boolean}true"
                                                fieldDescription="The body copy that will appear on the initial view of the component. Will be replaced as the user navigates around the wheel with compartment-specific text."
                                                fieldLabel="Wheel Introductory Text"
                                                name="./initial_text">
	                                            <rtePlugins jcr:primaryType="nt:unstructured">
	                                                <format
	                                                        jcr:primaryType="nt:unstructured"
	                                                        features="*"/>
	                                                <justify
	                                                        jcr:primaryType="nt:unstructured"
	                                                        features="*"/>
	                                                <misctools
	                                                        jcr:primaryType="nt:unstructured"
	                                                        features="*"/>
	                                            </rtePlugins>
	                                        </initial_text>
                                            <image_wheel
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/pathfield"
                                                emptyText="This field is mandatory"
                                                fieldDescription="Customize the background wheel graphic. Will use a standard wheel design by default."
                                                fieldLabel="Custom Wheel Image"
                                                name="./image_wheel"
                                                rootPath="/content/dam"
                                                required="{Boolean}true"/>
                                            <image_nose
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/pathfield"
                                                fieldDescription="Customize the wheel by adding a graphic to appear at the center of the wheel. By default, no graphic will appear."
                                                fieldLabel="Wheel Center Image"
                                                name="./image_nose"
                                                rootPath="/content/dam"/>
                                            <schedule_appointment
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                fieldLabel="Call to Action Text"
                                                name="./schedule_appointment"/>
                                            <destinationCTA
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/pathfield"
                                                fieldDescription="User may click this link to navigate away from the site. For external links, use formatÂ http://www.example.com"
                                                fieldLabel="Call to Action AEM Path or URL"
                                                name="./destinationCTA"
                                                rootPath="/content"/>  
                                            <backgroundColor
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="/apps/chinational/granite/widgets/colorpicker"
                                                colorsPath="/etc/config/chinational/components/colorpicker/interactiveWheelbackgroundcolorpicker"
                                                fieldDescription="Click on the color box to choose a different color for the component background."
                                                fieldLabel="Background Color"
                                                freestylePalette="{Boolean}true"
                                                name="./backgroundColor"/>
                                            <fontColor
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="/apps/chinational/granite/widgets/colorpicker"
                                                colorsPath="/etc/config/chinational/components/colorpicker/interactiveWheelfontcolorpicker"
                                                fieldDescription="Click on the color box to choose a different color for the component font"
                                                fieldLabel="Font Color"
                                                freestylePalette="{Boolean}true"
                                                name="./fontColor"/>
                                        </items>
                                    </well>
                                </items>
                            </column>
                        </items>
                    </mainSettingsTab>
                    <detailsSettingsTab
                        jcr:primaryType="nt:unstructured"
                        jcr:title="Wheel Compartment Settings"
                        sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns"
                        margin="{Boolean}false">
                        <items jcr:primaryType="nt:unstructured">
                            <column
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/container">
                                <items jcr:primaryType="nt:unstructured">
                                    <well
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/well">
                                        <items jcr:primaryType="nt:unstructured">
                                            <wheelCompartmentsDetails
                                                jcr:primaryType="nt:unstructured"
                                                fieldLabel="This component ONLY works (temporarily) with 5 elements (no more or less)"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/multifield"
                                                composite="{Boolean}true"
                                                fieldDescription="Click + to add a new entry"
                                                name="./multiCom">
                                                <field
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/coral/foundation/container"
                                                    name="./items">
                                                    <items jcr:primaryType="nt:unstructured">
                                                        <compartment_title
			                                                jcr:primaryType="nt:unstructured"
			                                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
			                                                emptyText="This field is mandatory"
			                                                fieldLabel="Compartment Heading"
			                                                name="./compartment_title"
			                                                required="{Boolean}true"/>
			                                        	<compartment_image
			                                                jcr:primaryType="nt:unstructured"
			                                                sling:resourceType="granite/ui/components/coral/foundation/form/pathfield"
			                                                emptyText="This field is mandatory"
			                                                fieldDescription="Compartment Image in Interactive Wheel"
			                                                fieldLabel="Compartment Image AEM Path"
			                                                name="./compartment_image"
			                                                rootPath="/content/dam"
			                                                required="{Boolean}true"/>
			                                            <compartment_image_alt_text
			                                                jcr:primaryType="nt:unstructured"
			                                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
			                                                fieldDescription="The text that will appear when the user rolls over the image with a cursor."
			                                                fieldLabel="Compartment Image Rollover Text"
			                                                name="./compartment_image_alt_text"/>
			                                            <compartment_text
			                                                jcr:primaryType="nt:unstructured"
			                                                sling:resourceType="cq/gui/components/authoring/dialog/richtext"
			                                                useFixedInlineToolbar="{Boolean}true"
			                                                fieldLabel="Wheel Compartment Text"
			                                                name="./compartment_text">
				                                            <rtePlugins jcr:primaryType="nt:unstructured">
				                                                <format
				                                                        jcr:primaryType="nt:unstructured"
				                                                        features="*"/>
				                                                <justify
				                                                        jcr:primaryType="nt:unstructured"
				                                                        features="*"/>
				                                                <misctools
				                                                        jcr:primaryType="nt:unstructured"
				                                                        features="*"/>
				                                            </rtePlugins>
				                                        </compartment_text>
                                                    </items>
                                                </field>
                                            </wheelCompartmentsDetails>
                                        </items>
                                    </well>
                                </items>
                            </column>
                        </items>
                    </detailsSettingsTab>
                    <greyBarTab
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/coral/foundation/include"
                        path="/apps/chinational/components/commons/cq_dialog/granite/greyBarTab"/>
                </items>
            </tabs> 
        </items>
    </content>
</jcr:root>
