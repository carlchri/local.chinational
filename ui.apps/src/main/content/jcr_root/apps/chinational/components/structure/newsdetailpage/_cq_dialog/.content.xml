<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="nt:unstructured">
    <content jcr:primaryType="nt:unstructured">
        <items jcr:primaryType="nt:unstructured">
            <tabs jcr:primaryType="nt:unstructured">
                <items jcr:primaryType="nt:unstructured">
                    <basic jcr:primaryType="nt:unstructured"/>
                    <advanced
                        jcr:primaryType="nt:unstructured"
                        sling:hideResource="{Boolean}true"/>
                    <socialmedia
                        jcr:primaryType="nt:unstructured"
                        sling:hideResource="{Boolean}true"/>
                    <cloudservices
                        jcr:primaryType="nt:unstructured"
                        sling:hideResource="{Boolean}true"/>
                    <personalization
                        jcr:primaryType="nt:unstructured"
                        sling:hideResource="{Boolean}true"/>
                    <permissions
                        jcr:primaryType="nt:unstructured"
                        sling:hideResource="{Boolean}true"/>
                    <newsdetail
                        jcr:primaryType="nt:unstructured"
                        jcr:title="News Details Properties"
                        sling:orderBefore="advanced"
                        sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns">
                        <items jcr:primaryType="nt:unstructured">
                            <column
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/container">
                                <items jcr:primaryType="nt:unstructured">
                                    <newsHeading
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                        emptyText="Enter News Heading"
                                        fieldDescription="Enter News Heading"
                                        fieldLabel="News Heading"
                                        name="./newsHeading"
                                        renderReadOnly="{Boolean}true"
                                        required="{Boolean}true"/>
                                    <newsSubHeading
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                        emptyText="Enter Press Release Sub-Heading"
                                        fieldDescription="Enter Press Release Sub-Heading (optional)"
                                        fieldLabel="Press Release Sub-Heading"
                                        name="./newsSubHeading"
                                        renderReadOnly="{Boolean}true"/>
                                    <newsDate
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/datepicker"
                                        emptyText="Date Format: YYYY-MM-DD"
                                        fieldDescription="Enter news date."
                                        fieldLabel="Publish Date"
                                        name="./publishDate"
                                        required="{Boolean}true"
                                        type="date"/>
                                    <excerpt
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/textarea"
                                        emptyText="Max 350 characters allowed."
                                        fieldDescription="Enter the excerpt text here. Max 350 characters allowed."
                                        fieldLabel="Excerpt"
                                        maxlength="{Long}350"
                                        name="./excerpt"
                                        required="{Boolean}true"/>
                                    <isFeaturedArticle
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/checkbox"
                                        fieldDescription="Selecting this checkbox will display this as a featured article"
                                        name="./isFeaturedArticle"
                                        text="Select to display as featured article"
                                        uncheckedValue="false"
                                        value="true"/>
                                    <headerImageSrc
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/pathfield"
                                        fieldDescription="Enter source for image to be displayed at top of News Details Pages"
                                        fieldLabel="Article Header Image  [3:1 ratio, minimum 1320 pixel width]"
                                        name="./imageSrc"
                                        rootPath="/content/dam"/>
                                    <tileImageSrc
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/pathfield"
                                        fieldDescription="Enter source for image to be displayed for Dynamic Tiles"
                                        fieldLabel="Tile Image [3:1 ratio, minimum 690 pixel width]"
                                        name="./tileImageSrc"
                                        rootPath="/content/dam"/>
                                    <featuredImageSrc
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/pathfield"
                                        fieldDescription="Enter source for image to be displayed for Featured List"
                                        fieldLabel="Featured Article Image [1.2:1 ratio, minimum 325 pixel width]"
                                        name="./featuredImageSrc"
                                        rootPath="/content/dam"/>
                                    <imageCaption
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                        emptyText="Caption below Image"
                                        fieldDescription="Caption below the image (optional)"
                                        fieldLabel="Image Caption"
                                        name="./imageCaption"
                                        renderReadOnly="{Boolean}true"/>
                                    <displayQuoteComponent
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/form/checkbox"
                                        fieldDescription="Selecting this checkbox will include Quote component in the page"
                                        name="./displayQuoteComponent"
                                        text="Select to display Quote Component config"
                                        uncheckedValue="false"
                                        value="true"/>
                                </items>
                            </column>
                        </items>
                    </newsdetail>
                </items>
            </tabs>
        </items>
    </content>
</jcr:root>
