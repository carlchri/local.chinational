<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:granite="http://www.adobe.com/jcr/granite/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="nt:unstructured"
    jcr:title="Quote and Image Settings"
    sling:resourceType="cq/gui/components/authoring/dialog">
    <content
        granite:class="cmp-list--editor"
        jcr:primaryType="nt:unstructured"
        sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns"
        margin="{Boolean}false">
        <items jcr:primaryType="nt:unstructured">
            <column
                jcr:primaryType="nt:unstructured"
                sling:resourceType="granite/ui/components/coral/foundation/container">
                <items jcr:primaryType="nt:unstructured">
                    <tabs
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/coral/foundation/tabs"
                        maximized="{Boolean}false">
                        <items jcr:primaryType="nt:unstructured">
                            <qaiMainTab
                                jcr:primaryType="nt:unstructured"
                                jcr:title="Values Tab"
                                sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns"
                                margin="{Boolean}true">
                                <items jcr:primaryType="nt:unstructured">
                                    <column
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/container">
                                        <items jcr:primaryType="nt:unstructured">
                                            <well
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/well">
                                                <items jcr:primaryType="nt:unstructured">
                                                    <heading
                                                        jcr:primaryType="nt:unstructured"
                                                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                        fieldDescription="Quote Heading text for the component"
                                                        fieldLabel="Quote Heading"
                                                        name="./heading"/>
                                                    <subheading
                                                        jcr:primaryType="nt:unstructured"
                                                        sling:resourceType="granite/ui/components/coral/foundation/form/textarea"
                                                        fieldDescription="Quote Sub-Heading for the component, displays below quote heading or standalone"
                                                        fieldLabel="Quote Sub Heading"
                                                        name="./subheading"
                                                        required="{Boolean}true"/>
                                                    <caption
                                                        jcr:primaryType="nt:unstructured"
                                                        sling:resourceType="granite/ui/components/coral/foundation/form/textarea"
                                                        fieldDescription="Displays below quote sub-heading. Dash is added before the name"
                                                        fieldLabel="Name"
                                                        name="./caption"
                                                        text=""/>
                                                </items>
                                            </well>
                                        </items>
                                    </column>
                                </items>
                            </qaiMainTab>
                            <qaSettingsTab
                                jcr:primaryType="nt:unstructured"
                                jcr:title="Settings Tab"
                                sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns"
                                margin="{Boolean}true">
                                <items jcr:primaryType="nt:unstructured">
                                    <column
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/container">
                                        <items jcr:primaryType="nt:unstructured">
                                            <well
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/well">
                                                <items jcr:primaryType="nt:unstructured">
                                                    <imageNotRequired
                                                        jcr:primaryType="nt:unstructured"
                                                        sling:resourceType="granite/ui/components/coral/foundation/form/checkbox"
                                                        fieldDescription="Select this checkbox if image is not required."
                                                        name="./imageNotRequired"
                                                        text="Select if Image is Not Required"
                                                        uncheckedValue="false"
                                                        value="true"/>
                                                    <buttonNotRequired
                                                        jcr:primaryType="nt:unstructured"
                                                        sling:resourceType="granite/ui/components/coral/foundation/form/checkbox"
                                                        fieldDescription="Select this checkbox if buttons below quote are not required."
                                                        name="./buttonNotRequired"
                                                        text="Select if Buttons are Not Required"
                                                        uncheckedValue="false"
                                                        value="true"/>
                                                    <noOfButtons
                                                        jcr:primaryType="nt:unstructured"
                                                        sling:resourceType="granite/ui/components/coral/foundation/form/numberfield"
                                                        defaultValue="{Long}1"
                                                        fieldDescription="Select How many buttons reqd"
                                                        fieldLabel="No. of Buttons Required"
                                                        max="{Long}2"
                                                        min="{Long}1"
                                                        name="./noOfButtons"
                                                        step="{Long}1"
                                                        text="No. of Buttons Required"/>
                                                    <greybgRequired
                                                        jcr:primaryType="nt:unstructured"
                                                        sling:resourceType="granite/ui/components/coral/foundation/form/checkbox"
                                                        fieldDescription="Select this checkbox if Grey Background for button is required"
                                                        name="./greybgRequired"
                                                        text="Select if Grey Background is Required for buttons [By Default, White]"
                                                        uncheckedValue="false"
                                                        value="true"/>
                                                </items>
                                            </well>
                                        </items>
                                    </column>
                                </items>
                            </qaSettingsTab>
                        </items>
                    </tabs>
                </items>
            </column>
        </items>
    </content>
</jcr:root>
