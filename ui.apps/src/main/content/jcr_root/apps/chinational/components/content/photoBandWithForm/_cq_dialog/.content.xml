<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:granite="http://www.adobe.com/jcr/granite/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="nt:unstructured"
    jcr:title="Photo Band with Form"
    sling:resourceType="cq/gui/components/authoring/dialog">
    <content
        jcr:primaryType="nt:unstructured"
        sling:resourceType="granite/ui/components/coral/foundation/container">
        <items jcr:primaryType="nt:unstructured">
            <tabs
                jcr:primaryType="nt:unstructured"
                sling:resourceType="granite/ui/components/coral/foundation/tabs"
                maximized="{Boolean}true">
                <items jcr:primaryType="nt:unstructured">
                    <pbwfMainTab
                        jcr:primaryType="nt:unstructured"
                        jcr:title="Main"
                        sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns"
                        margin="{Boolean}true">
                        <items jcr:primaryType="nt:unstructured">
                            <column
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/container">
                                <items jcr:primaryType="nt:unstructured">
                                    <well
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/well">
                                        <items jcr:primaryType="nt:unstructured">
                                            <heroStyle
                                                jcr:primaryType="nt:unstructured"
                                                sling:orderBefore="orderBy"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/select"
                                                fieldDescription="Select a Style for this component"
                                                fieldLabel="Photo Band Style"
                                                name="./heroStyle">
                                                <items jcr:primaryType="nt:unstructured">
                                                    <imageform
                                                        jcr:primaryType="nt:unstructured"
                                                        text="Image and Form"
                                                        value="imageform"/>
                                                    <videoform
                                                        jcr:primaryType="nt:unstructured"
                                                        text="Video and Form"
                                                        value="videoform"/>
                                                </items>
                                            </heroStyle>
                                            <heading
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                fieldDescription="Heading for the form"
                                                fieldLabel="Heading"
                                                name="./heading"/>
                                            <buttonLabel
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                fieldDescription="This Text appears on the Submit Button "
                                                fieldLabel="Button Label"
                                                name="./label"/>
                                            <Success_x0020_Message
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                emptyText="Thanks for submitting"
                                                fieldDescription="Success message displayed on page, when email is sent successfully"
                                                fieldLabel="Success Message"
                                                name="./successMessage"/>
                                            <backgroundColor
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="/apps/chinational/granite/widgets/colorpicker"
                                                colorsPath="/etc/config/chinational/components/colorpicker/herobackgroundcolorpicker"
                                                fieldDescription="Click on the color box to choose a different color for the photo band background"
                                                fieldLabel="Background Color"
                                                freestylePalette="{Boolean}true"
                                                name="./backgroundColor"/>
                                        </items>
                                    </well>
                                </items>
                            </column>
                        </items>
                    </pbwfMainTab>
                    <videoOptions
                        jcr:primaryType="nt:unstructured"
                        jcr:title="Video"
                        sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns"
                        margin="{Boolean}true">
                        <items jcr:primaryType="nt:unstructured">
                            <column
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/container">
                                <items jcr:primaryType="nt:unstructured">
                                    <well
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/well">
                                        <items jcr:primaryType="nt:unstructured">
                                            <videoUrl
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                fieldDescription="Video YouTube URL e.g. https://www.youtube.com/embed/yt-ID-here"
                                                fieldLabel="Video URL (you tube only)"
                                                name="./videoUrl"
                                                rootPath="/content"/>
                                            <thumbnailOption
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/foundation/form/radiogroup"
                                                name="./thumbnailOption">
                                                <items jcr:primaryType="nt:unstructured">
                                                    <option1
                                                        jcr:primaryType="nt:unstructured"
                                                        sling:resourceType="granite/ui/components/foundation/form/radio"
                                                        text="DAM Thumbnail"
                                                        value="damThumbnail"/>
                                                    <option2
                                                        jcr:primaryType="nt:unstructured"
                                                        sling:resourceType="granite/ui/components/foundation/form/radio"
                                                        text="Default YouTube Thumbnail"
                                                        value="mqdefault"/>
                                                    <option3
                                                        jcr:primaryType="nt:unstructured"
                                                        sling:resourceType="granite/ui/components/foundation/form/radio"
                                                        text="High Resolution YouTube Thumbnail (if unavailable, users will see grey thumbnail)"
                                                        value="maxresdefault"/>
                                                </items>
                                            </thumbnailOption>
                                            <videoImage
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/pathfield"
                                                fieldDescription="Select thumbnail image from DAM. If it is not selected, the component will get video image from Youtube."
                                                fieldLabel="Video Image (DAM)"
                                                name="./videoImage"
                                                rootPath="/content/dam"/>
                                        </items>
                                    </well>
                                </items>
                            </column>
                        </items>
                    </videoOptions>
                    <emailSettingsTab
                        jcr:primaryType="nt:unstructured"
                        jcr:title="Email"
                        sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns"
                        margin="{Boolean}false">
                        <items jcr:primaryType="nt:unstructured">
                            <column
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/container">
                                <items jcr:primaryType="nt:unstructured">
                                    <well
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/well">
                                        <items jcr:primaryType="nt:unstructured">
                                            <subject
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                fieldDescription="Subject line for the emails sent for each submitted form"
                                                fieldLabel="Subject"
                                                name="./emailSubject"/>
                                            <from
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                fieldDescription="Email address that the email is considered to be sent from"
                                                fieldLabel="From"
                                                name="./emailFrom"/>
                                            <to
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                fieldDescription="Email address where the message will be sent"
                                                fieldLabel="To"
                                                name="./emailTo"/>
                                            <ccCollection
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/multifield"
                                                composite="{Boolean}true"
                                                fieldDescription="Email addresss where the message will be sent as a copy"
                                                fieldLabel="CC"
                                                name="./multiCol">
                                                <field
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/coral/foundation/container"
                                                    name="./ccEmails">
                                                    <items jcr:primaryType="nt:unstructured">
                                                        <to
                                                            jcr:primaryType="nt:unstructured"
                                                            sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                            name="./ccEmail"
                                                            required="{Boolean}true"/>
                                                    </items>
                                                </field>
                                            </ccCollection>
                                        </items>
                                    </well>
                                </items>
                            </column>
                        </items>
                    </emailSettingsTab>
                    <formFieldsSettings
                        jcr:primaryType="nt:unstructured"
                        jcr:title="Form Fields"
                        sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns"
                        margin="{Boolean}true">
                        <items jcr:primaryType="nt:unstructured">
                            <column
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/container">
                                <items jcr:primaryType="nt:unstructured">
                                    <well
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/well">
                                        <items jcr:primaryType="nt:unstructured">
                                            <formFields
                                                jcr:primaryType="nt:unstructured"
                                                jcr:title="Form Fields"
                                                sling:resourceType="granite/ui/components/coral/foundation/accordion"
                                                margin="{Boolean}false">
                                                <items jcr:primaryType="nt:unstructured">
                                                    <FormField1
                                                        jcr:primaryType="nt:unstructured"
                                                        jcr:title="Form Field 1"
                                                        sling:resourceType="granite/ui/components/coral/foundation/container">
                                                        <items jcr:primaryType="nt:unstructured">
                                                            <well
                                                                jcr:primaryType="nt:unstructured"
                                                                sling:resourceType="granite/ui/components/coral/foundation/well">
                                                                <items jcr:primaryType="nt:unstructured">
                                                                    <fieldType
                                                                        granite:class="cmp-options--editor-type-v1"
                                                                        jcr:primaryType="nt:unstructured"
                                                                        sling:resourceType="granite/ui/components/coral/foundation/form/select"
                                                                        fieldDescription="Select the form field"
                                                                        fieldLabel="Field Type"
                                                                        name="./fieldType1">
                                                                        <items jcr:primaryType="nt:unstructured">
                                                                            <textfield
                                                                                jcr:primaryType="nt:unstructured"
                                                                                text="Text Field"
                                                                                value="textfield"/>
                                                                            <dropdown
                                                                                jcr:primaryType="nt:unstructured"
                                                                                text="Dropdown"
                                                                                value="dropdown"/>
                                                                        </items>
                                                                    </fieldType>
                                                                </items>
                                                            </well>
                                                        </items>
                                                    </FormField1>
                                                    <FormField2
                                                        jcr:primaryType="nt:unstructured"
                                                        jcr:title="Form Field 2"
                                                        sling:resourceType="granite/ui/components/coral/foundation/container">
                                                        <items jcr:primaryType="nt:unstructured">
                                                            <well
                                                                jcr:primaryType="nt:unstructured"
                                                                sling:resourceType="granite/ui/components/coral/foundation/well">
                                                                <items jcr:primaryType="nt:unstructured">
                                                                    <fieldType
                                                                        granite:class="cmp-options--editor-type-v1"
                                                                        jcr:primaryType="nt:unstructured"
                                                                        sling:resourceType="granite/ui/components/coral/foundation/form/select"
                                                                        fieldDescription="Select the form field"
                                                                        fieldLabel="Field Type"
                                                                        name="./fieldType2">
                                                                        <items jcr:primaryType="nt:unstructured">
                                                                            <textfield
                                                                                jcr:primaryType="nt:unstructured"
                                                                                text="Text Field"
                                                                                value="textfield"/>
                                                                            <dropdown
                                                                                jcr:primaryType="nt:unstructured"
                                                                                text="Dropdown"
                                                                                value="dropdown"/>
                                                                        </items>
                                                                    </fieldType>
                                                                </items>
                                                            </well>
                                                        </items>
                                                    </FormField2>
                                                    <FormField3
                                                        jcr:primaryType="nt:unstructured"
                                                        jcr:title="Form Field 3"
                                                        sling:resourceType="granite/ui/components/coral/foundation/container">
                                                        <items jcr:primaryType="nt:unstructured">
                                                            <well
                                                                jcr:primaryType="nt:unstructured"
                                                                sling:resourceType="granite/ui/components/coral/foundation/well">
                                                                <items jcr:primaryType="nt:unstructured">
                                                                    <fieldType
                                                                        granite:class="cmp-options--editor-type-v1"
                                                                        jcr:primaryType="nt:unstructured"
                                                                        sling:resourceType="granite/ui/components/coral/foundation/form/select"
                                                                        fieldDescription="Select the form field"
                                                                        fieldLabel="Field Type"
                                                                        name="./fieldType3">
                                                                        <items jcr:primaryType="nt:unstructured">
                                                                            <textfield
                                                                                jcr:primaryType="nt:unstructured"
                                                                                text="Text Field"
                                                                                value="textfield"/>
                                                                            <dropdown
                                                                                jcr:primaryType="nt:unstructured"
                                                                                text="Dropdown"
                                                                                value="dropdown"/>
                                                                        </items>
                                                                    </fieldType>
                                                                    <disableField
                                                                        jcr:primaryType="nt:unstructured"
                                                                        sling:resourceType="granite/ui/components/coral/foundation/form/checkbox"
                                                                        fieldDescription="Selecting this checkbox will disable the field"
                                                                        name="./disableField3"
                                                                        text="Select to disable the field"
                                                                        uncheckedValue="false"
                                                                        value="true"/>
                                                                </items>
                                                            </well>
                                                        </items>
                                                    </FormField3>
                                                    <FormField4
                                                        jcr:primaryType="nt:unstructured"
                                                        jcr:title="Form Field 4"
                                                        sling:resourceType="granite/ui/components/coral/foundation/container">
                                                        <items jcr:primaryType="nt:unstructured">
                                                            <well
                                                                jcr:primaryType="nt:unstructured"
                                                                sling:resourceType="granite/ui/components/coral/foundation/well">
                                                                <items jcr:primaryType="nt:unstructured">
                                                                    <fieldType
                                                                        granite:class="cmp-options--editor-type-v1"
                                                                        jcr:primaryType="nt:unstructured"
                                                                        sling:resourceType="granite/ui/components/coral/foundation/form/select"
                                                                        fieldDescription="Select the form field"
                                                                        fieldLabel="Field Type"
                                                                        name="./fieldType4">
                                                                        <items jcr:primaryType="nt:unstructured">
                                                                            <textfield
                                                                                jcr:primaryType="nt:unstructured"
                                                                                text="Text Field"
                                                                                value="textfield"/>
                                                                            <dropdown
                                                                                jcr:primaryType="nt:unstructured"
                                                                                text="Dropdown"
                                                                                value="dropdown"/>
                                                                        </items>
                                                                    </fieldType>
                                                                    <disableField
                                                                        jcr:primaryType="nt:unstructured"
                                                                        sling:resourceType="granite/ui/components/coral/foundation/form/checkbox"
                                                                        fieldDescription="Selecting this checkbox will disable the field"
                                                                        name="./disableField4"
                                                                        text="Select to disable the field"
                                                                        uncheckedValue="false"
                                                                        value="true"/>
                                                                </items>
                                                            </well>
                                                        </items>
                                                    </FormField4>
                                                </items>
                                            </formFields>
                                        </items>
                                    </well>
                                </items>
                            </column>
                        </items>
                    </formFieldsSettings>
                    <greyBarTab
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/coral/foundation/include"
                        path="/apps/chinational/components/commons/cq_dialog/granite/greyBarTab"/>
                </items>
            </tabs>
        </items>
    </content>
</jcr:root>
