<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:granite="http://www.adobe.com/jcr/granite/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="nt:unstructured"
    jcr:title="Human Network Photo Band"
    sling:resourceType="cq/gui/components/authoring/dialog">
    <content
        granite:class="cmp-list--editor"
        jcr:primaryType="nt:unstructured"
        sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns"
        margin="{Boolean}false">
        <items jcr:primaryType="nt:unstructured">
            <column
                jcr:primaryType="nt:unstructured"
                sling:resourceType="granite/ui/components/coral/foundation/container">
                <items jcr:primaryType="nt:unstructured">
                    <tabs
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/coral/foundation/tabs"
                        maximized="{Boolean}false">
                        <items jcr:primaryType="nt:unstructured">
                            <hnpbMainTab
                                jcr:primaryType="nt:unstructured"
                                jcr:title="Main"
                                sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns"
                                margin="{Boolean}true">
                                <items jcr:primaryType="nt:unstructured">
                                    <column
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/container">
                                        <items jcr:primaryType="nt:unstructured">
                                            <well
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/well">
                                                <items jcr:primaryType="nt:unstructured">
                                                    <heroStyle
                                                        jcr:primaryType="nt:unstructured"
                                                        sling:orderBefore="orderBy"
                                                        sling:resourceType="granite/ui/components/coral/foundation/form/select"
                                                        fieldDescription="Select a Style for this component"
                                                        fieldLabel="Photo Band Style"
                                                        name="./heroStyle">
                                                        <items jcr:primaryType="nt:unstructured">
                                                            <imageform
                                                                jcr:primaryType="nt:unstructured"
                                                                text="Image and Form"
                                                                value="imageform"/>
                                                            <videoform
                                                                jcr:primaryType="nt:unstructured"
                                                                text="Video and Form"
                                                                value="videoform"/>
                                                        </items>
                                                    </heroStyle>
                                                    <heading
                                                        jcr:primaryType="nt:unstructured"
                                                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                        fieldDescription="Heading for the form"
                                                        fieldLabel="Heading"
                                                        name="./heading"/>
                                                    <buttonLabel
                                                        jcr:primaryType="nt:unstructured"
                                                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                        fieldDescription="This Text appears on the Button "
                                                        fieldLabel="Button Label (requires Link To)"
                                                        name="./label"/>
                                                    <backgroundColor
                                                        jcr:primaryType="nt:unstructured"
                                                        sling:resourceType="/apps/chinational/granite/widgets/colorpicker"
                                                        colorsPath="/etc/config/chinational/components/colorpicker/herobackgroundcolorpicker"
                                                        fieldDescription="Click on the color box to choose a different color for the photo band background"
                                                        fieldLabel="Background Color"
                                                        freestylePalette="{Boolean}true"
                                                        name="./backgroundColor"/>
                                                </items>
                                            </well>
                                        </items>
                                    </column>
                                </items>
                            </hnpbMainTab>
                            <videoOptions
                                jcr:primaryType="nt:unstructured"
                                jcr:title="Video"
                                sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns"
                                margin="{Boolean}true">
                                <items jcr:primaryType="nt:unstructured">
                                    <column
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/container">
                                        <items jcr:primaryType="nt:unstructured">
                                            <well
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/well">
                                                <items jcr:primaryType="nt:unstructured">
                                                    <videoUrl
                                                        jcr:primaryType="nt:unstructured"
                                                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                        fieldDescription="Video YouTube URL e.g. https://www.youtube.com/embed/yt-ID-here"
                                                        fieldLabel="Video URL (you tube only)"
                                                        name="./videoUrl"
                                                        rootPath="/content"/>
                                                    <thumbnailOption
                                                        jcr:primaryType="nt:unstructured"
                                                        sling:resourceType="granite/ui/components/foundation/form/radiogroup"
                                                        name="./thumbnailOption">
                                                        <items jcr:primaryType="nt:unstructured">
                                                            <option1
                                                                jcr:primaryType="nt:unstructured"
                                                                sling:resourceType="granite/ui/components/foundation/form/radio"
                                                                text="DAM Thumbnail"
                                                                value="damThumbnail"/>
                                                            <option2
                                                                jcr:primaryType="nt:unstructured"
                                                                sling:resourceType="granite/ui/components/foundation/form/radio"
                                                                text="Default YouTube Thumbnail"
                                                                value="mqdefault"/>
                                                            <option3
                                                                jcr:primaryType="nt:unstructured"
                                                                sling:resourceType="granite/ui/components/foundation/form/radio"
                                                                text="High Resolution YouTube Thumbnail (if unavailable, users will see grey thumbnail)"
                                                                value="maxresdefault"/>
                                                        </items>
                                                    </thumbnailOption>
                                                    <videoImage
                                                        jcr:primaryType="nt:unstructured"
                                                        sling:resourceType="granite/ui/components/coral/foundation/form/pathfield"
                                                        fieldDescription="Select thumbnail image from DAM. If it is not selected, the component will get video image from Youtube."
                                                        fieldLabel="Video Image (DAM)"
                                                        name="./videoImage"
                                                        rootPath="/content/dam"/>
                                                </items>
                                            </well>
                                        </items>
                                    </column>
                                </items>
                            </videoOptions>
                            <emailSettingsTab
                                jcr:primaryType="nt:unstructured"
                                jcr:title="Email"
                                sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns"
                                margin="{Boolean}false">
                                <items jcr:primaryType="nt:unstructured">
                                    <column
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/container">
                                        <items jcr:primaryType="nt:unstructured">
                                            <well
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/well">
                                                <items jcr:primaryType="nt:unstructured">
                                                    <subject
                                                        jcr:primaryType="nt:unstructured"
                                                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                        fieldDescription="Subject line for the emails sent for each submitted form"
                                                        fieldLabel="Subject"
                                                        name="./emailSubject"/>
                                                    <from
                                                        jcr:primaryType="nt:unstructured"
                                                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                        fieldDescription="Email address that the email is considered to be sent from"
                                                        fieldLabel="From"
                                                        name="./emailFrom"/>
                                                    <to
                                                        jcr:primaryType="nt:unstructured"
                                                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                        fieldDescription="Email address where the message will be sent"
                                                        fieldLabel="To"
                                                        name="./emailFrom"/>
                                                    <ccCollection
                                                        jcr:primaryType="nt:unstructured"
                                                        sling:resourceType="granite/ui/components/coral/foundation/form/multifield"
                                                        composite="{Boolean}true"
                                                        fieldDescription="Email addresss where the message will be sent as a copy"
                                                        fieldLabel="CC"
                                                        name="./multiCol">
                                                        <field
                                                            jcr:primaryType="nt:unstructured"
                                                            sling:resourceType="granite/ui/components/coral/foundation/container"
                                                            name="./ccEmails">
                                                            <items jcr:primaryType="nt:unstructured">
                                                                <to
                                                                    jcr:primaryType="nt:unstructured"
                                                                    sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                                    name="./ccEmail"/>
                                                            </items>
                                                        </field>
                                                    </ccCollection>
                                                </items>
                                            </well>
                                        </items>
                                    </column>
                                </items>
                            </emailSettingsTab>
                            <textFieldTab
                                jcr:primaryType="nt:unstructured"
                                jcr:title="Text Field"
                                sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns"
                                margin="{Boolean}true">
                                <items jcr:primaryType="nt:unstructured">
                                    <column
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/container">
                                        <items jcr:primaryType="nt:unstructured">
                                            <fieldType
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/select"
                                                fieldLabel="Text Filed Type"
                                                name="./textfieldType">
                                                <items jcr:primaryType="nt:unstructured">
                                                    <text
                                                        jcr:primaryType="nt:unstructured"
                                                        text="Text"
                                                        value="text"/>
                                                    <email
                                                        jcr:primaryType="nt:unstructured"
                                                        text="Email"
                                                        value="email"/>
                                                    <tel
                                                        jcr:primaryType="nt:unstructured"
                                                        text="Tel"
                                                        value="tel"/>
                                                </items>
                                            </fieldType>
                                            <name
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                emptyText="The name of the field which is submitted with the form data"
                                                fieldDescription="The name of the field which is submitted with the form data"
                                                fieldLabel="Text Field Name"
                                                name="./textfieldName"/>
                                            <value
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                fieldDescription="Default value of the field"
                                                fieldLabel="Value"
                                                name="./textfieldvalue"/>
                                        </items>
                                    </column>
                                </items>
                            </textFieldTab>
                            <options
                                jcr:primaryType="nt:unstructured"
                                jcr:title="Options"
                                sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns"
                                margin="{Boolean}false">
                                <items jcr:primaryType="nt:unstructured">
                                    <columns
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/container">
                                        <items jcr:primaryType="nt:unstructured">
                                            <optionTypes
                                                granite:class="cmp-options--editor-type-v1"
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/select"
                                                fieldDescription="Set the type of the options field."
                                                fieldLabel="Options Type"
                                                name="./optionsType">
                                                <items jcr:primaryType="nt:unstructured">
                                                    <dropdown
                                                        jcr:primaryType="nt:unstructured"
                                                        text="Drop-down"
                                                        value="drop-down"/>
                                                    <multiDropDown
                                                        jcr:primaryType="nt:unstructured"
                                                        text="Multi-select drop-down"
                                                        value="multi-drop-down"/>
                                                </items>
                                            </optionTypes>
                                            <name
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                fieldDescription="The name of the field, which is submitted with the form data."
                                                fieldLabel="Name"
                                                name="./optionsName"/>
                                            <options
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/multifield"
                                                composite="{Boolean}true"
                                                fieldDescription="Define the different options"
                                                fieldLabel="Options"
                                                name="./multiCol"
                                                renderReadOnly="{Boolean}true">
                                                <field
                                                    granite:class="cmp-options--editor-item-multifield-composite-item coral-Well"
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/coral/foundation/container"
                                                    name="./options">
                                                    <items jcr:primaryType="nt:unstructured">
                                                        <option
                                                            granite:class="cmp-options--editor-item-multifield-composite-item-container"
                                                            jcr:primaryType="nt:unstructured"
                                                            sling:resourceType="granite/ui/components/coral/foundation/container">
                                                            <items jcr:primaryType="nt:unstructured">
                                                                <value
                                                                    jcr:primaryType="nt:unstructured"
                                                                    sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                                    fieldLabel="Value"
                                                                    name="./optionValue"/>
                                                                <text
                                                                    jcr:primaryType="nt:unstructured"
                                                                    sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                                    fieldLabel="Text"
                                                                    name="./optionText"/>
                                                            </items>
                                                        </option>
                                                    </items>
                                                </field>
                                            </options>
                                        </items>
                                    </columns>
                                </items>
                            </options>
                            <greyBarTab
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/include"
                                path="/apps/chinational/components/commons/cq_dialog/granite/greyBarTab"/>
                        </items>
                    </tabs>
                </items>
            </column>
        </items>
    </content>
</jcr:root>
