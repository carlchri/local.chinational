<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" 
	xmlns:granite="http://www.adobe.com/jcr/granite/1.0" 
	xmlns:cq="http://www.day.com/jcr/cq/1.0" 
	xmlns:jcr="http://www.jcp.org/jcr/1.0" 
	xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="nt:unstructured"
    jcr:title="Member Tiles Container Settings"
    sling:resourceType="cq/gui/components/authoring/dialog">
    <content
        jcr:primaryType="nt:unstructured"
        sling:resourceType="granite/ui/components/coral/foundation/container">
        <items jcr:primaryType="nt:unstructured">     
            <tabs
                jcr:primaryType="nt:unstructured"
                sling:resourceType="granite/ui/components/coral/foundation/tabs"
                maximized="{Boolean}true">
             <items jcr:primaryType="nt:unstructured">
                 <mainTab
                     jcr:primaryType="nt:unstructured"
                     jcr:title="Main Settings Tab"
                     sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns"
                     margin="{Boolean}false">
                     <items jcr:primaryType="nt:unstructured">
                         <column
                             jcr:primaryType="nt:unstructured"
                             sling:resourceType="granite/ui/components/coral/foundation/container">
                             <items jcr:primaryType="nt:unstructured">
                                 <well
                                     jcr:primaryType="nt:unstructured"
                                     sling:resourceType="granite/ui/components/coral/foundation/well">
                                     <items jcr:primaryType="nt:unstructured">
                                     	 <numberOfTiles
										     jcr:primaryType="nt:unstructured"
										     sling:resourceType="granite/ui/components/foundation/form/numberfield"
										     fieldLabel="Tiles retrieved per every LOAD MORE button click:"
										     defaultValue="4"
										     min="2"   
										     step="2"
										     name="./numberOfTiles"/>    
                                         <multifieldcollection
                                             jcr:primaryType="nt:unstructured"
                                             sling:resourceType="granite/ui/components/coral/foundation/form/multifield"
                                             composite="{Boolean}true"
                                             name="./multiCol"
                                             fieldDescription="Click 'Add' to add a members tile component"
                                             fieldLabel="Members Tile Component Collection">
                                             <field
                                                 jcr:primaryType="nt:unstructured"
                                                 sling:resourceType="granite/ui/components/coral/foundation/container"
                                                 name="./mediaCollection">
                                                 <items jcr:primaryType="nt:unstructured">                               
                                                     <name
                                                         jcr:primaryType="nt:unstructured"
                                                         sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                         fieldDescription="A name to identify the component."
                                                         fieldLabel="Enter a name for this tile (visible in edit mode only):"
                                                         name="./name"
                                                         required="{Boolean}true"/>
                                                     <nodeName
                                                         jcr:primaryType="nt:unstructured"
                                                         sling:resourceType="granite/ui/components/coral/foundation/form/hidden"
                                                         name="./nodeName"/>
                                                 </items>
                                             </field>
                                         </multifieldcollection>
                                     </items>
                                 </well>
                             </items>
                         </column>
                     </items>
                 </mainTab>
                 <greyBarTab
                     jcr:primaryType="nt:unstructured"
                     sling:resourceType="granite/ui/components/coral/foundation/include"
                     path="/apps/chinational/components/commons/cq_dialog/granite/greyBarTab"/>
             </items>
            </tabs>
        </items>
    </content>
</jcr:root>