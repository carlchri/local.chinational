<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:granite="http://www.adobe.com/jcr/granite/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="nt:unstructured"
    jcr:title="Tiles and News List Settings"
    sling:resourceType="cq/gui/components/authoring/dialog">
    <content
        granite:class="cmp-list--editor"
        jcr:primaryType="nt:unstructured"
        sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns"
        margin="{Boolean}false">
        <items jcr:primaryType="nt:unstructured">
            <column
                jcr:primaryType="nt:unstructured"
                sling:resourceType="granite/ui/components/coral/foundation/container">
                <items jcr:primaryType="nt:unstructured">
                    <tabs
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/coral/foundation/tabs"
                        maximized="{Boolean}false">
                        <items jcr:primaryType="nt:unstructured">
                            <mainTab
                                jcr:primaryType="nt:unstructured"
                                jcr:title="Main Settings Tab"
                                sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns"
                                margin="{Boolean}true">
                                <items jcr:primaryType="nt:unstructured">
                                    <column
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/container">
                                        <items jcr:primaryType="nt:unstructured">
                                            <well
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/well">
                                                <items jcr:primaryType="nt:unstructured">
                                                    <headingSelection
                                                        granite:class="cq-dialog-dropdown-showhide"
                                                        jcr:primaryType="nt:unstructured"
                                                        sling:resourceType="granite/ui/components/coral/foundation/form/select"
                                                        fieldDescription="From Dropdown, pick appropriate option to enable or disable Content Tiles Heading"
                                                        fieldLabel="Content Tiles Heading"
                                                        name="./selectHeading">
                                                        <items jcr:primaryType="nt:unstructured">
                                                            <headingNotRequired
                                                                jcr:primaryType="nt:unstructured"
                                                                selected="{Boolean}true"
                                                                text="Disable Content Tiles Heading"
                                                                value="headingNotRequired"/>
                                                            <headingRequired
                                                                jcr:primaryType="nt:unstructured"
                                                                text="Enable Content Tiles Heading"
                                                                value="headingRequired"/>
                                                        </items>
                                                        <granite:data
                                                            jcr:primaryType="nt:unstructured"
                                                            cq-dialog-dropdown-showhide-target=".list-option-heading-showhide-target"/>
                                                    </headingSelection>
                                                    <tileHeading
                                                        granite:class="hide list-option-heading-showhide-target"
                                                        jcr:primaryType="nt:unstructured"
                                                        sling:resourceType="granite/ui/components/coral/foundation/heading"
                                                        level="{Long}3"
                                                        text="Enter Content Tiles Heading:">
                                                        <granite:data
                                                            jcr:primaryType="nt:unstructured"
                                                            showhidetargetvalue="headingRequired"/>
                                                    </tileHeading>
                                                    <contentTilesHeading
                                                        granite:class="list-option-heading-showhide-target"
                                                        jcr:primaryType="nt:unstructured"
                                                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                        emptyText="Enter Content Tiles Heading"
                                                        fieldDescription="This text will be used as heading for content tiles"
                                                        name="./contentTilesHeading">
                                                        <granite:data
                                                            jcr:primaryType="nt:unstructured"
                                                            showhidetargetvalue="headingRequired"/>
                                                    </contentTilesHeading>
                                                    <noOfContentTiles
                                                        jcr:primaryType="nt:unstructured"
                                                        sling:resourceType="granite/ui/components/coral/foundation/form/numberfield"
                                                        defaultValue="1"
                                                        fieldDescription="Select How many Content Tiles are required"
                                                        fieldLabel="No. of Content Tiles Required"
                                                        max="{Long}3"
                                                        min="{Long}1"
                                                        name="./noOfContentTiles"
                                                        required="{Boolean}true"
                                                        step="{Long}1"
                                                        text="No. of Content Tiles Required"/>
                                                    <listOnRightNotRequired
                                                        jcr:primaryType="nt:unstructured"
                                                        sling:resourceType="granite/ui/components/coral/foundation/form/checkbox"
                                                        fieldDescription="Select this checkbox to enable list on right"
                                                        name="./listOnRightNotRequired"
                                                        text="Select to enable List on right"
                                                        uncheckedValue="false"
                                                        value="true"/>
                                                    <imageNotRequired
                                                        jcr:primaryType="nt:unstructured"
                                                        sling:resourceType="granite/ui/components/coral/foundation/form/checkbox"
                                                        fieldDescription="Select this checkbox to disable image"
                                                        name="./imageNotRequired"
                                                        text="Select to disable image"
                                                        uncheckedValue="false"
                                                        value="true"/>
                                                    <dateNotRequired
                                                        jcr:primaryType="nt:unstructured"
                                                        sling:resourceType="granite/ui/components/coral/foundation/form/checkbox"
                                                        fieldDescription="Select this checkbox to disable date"
                                                        name="./dateNotRequired"
                                                        text="Select to disable date"
                                                        uncheckedValue="false"
                                                        value="true"/>
                                                </items>
                                            </well>
                                        </items>
                                    </column>
                                </items>
                            </mainTab>
                            <buttonTab
                                jcr:primaryType="nt:unstructured"
                                jcr:title="Button Tab"
                                sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns"
                                margin="{Boolean}true">
                                <items jcr:primaryType="nt:unstructured">
                                    <column
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/container">
                                        <items jcr:primaryType="nt:unstructured">
                                            <well
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/well">
                                                <items jcr:primaryType="nt:unstructured">
                                                    <buttonSelection
                                                        granite:class="cq-dialog-dropdown-showhide"
                                                        jcr:primaryType="nt:unstructured"
                                                        sling:resourceType="granite/ui/components/coral/foundation/form/select"
                                                        fieldLabel="Choose from dropdown to enable or disable button [disabled by default]"
                                                        name="./selectButton">
                                                        <items jcr:primaryType="nt:unstructured">
                                                            <buttonNotRequired
                                                                jcr:primaryType="nt:unstructured"
                                                                selected="{Boolean}true"
                                                                text="Disable Button"
                                                                value="buttonNotRequired"/>
                                                            <buttonRequired
                                                                jcr:primaryType="nt:unstructured"
                                                                text="Enable Button"
                                                                value="buttonRequired"/>
                                                        </items>
                                                        <granite:data
                                                            jcr:primaryType="nt:unstructured"
                                                            cq-dialog-dropdown-showhide-target=".list-option-button-showhide-target"/>
                                                    </buttonSelection>
                                                    <buttonHeading
                                                        granite:class="hide list-option-button-showhide-target"
                                                        jcr:primaryType="nt:unstructured"
                                                        sling:resourceType="granite/ui/components/coral/foundation/heading"
                                                        level="{Long}4"
                                                        text="Button Text">
                                                        <granite:data
                                                            jcr:primaryType="nt:unstructured"
                                                            showhidetargetvalue="buttonRequired"/>
                                                    </buttonHeading>
                                                    <buttonText
                                                        granite:class="list-option-button-showhide-target"
                                                        jcr:primaryType="nt:unstructured"
                                                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                        emptyText="SEE ALL NEWS"
                                                        name="./linkText">
                                                        <granite:data
                                                            jcr:primaryType="nt:unstructured"
                                                            showhidetargetvalue="buttonRequired"/>
                                                    </buttonText>
                                                    <linkUrlHeading
                                                        granite:class="hide list-option-button-showhide-target"
                                                        jcr:primaryType="nt:unstructured"
                                                        sling:resourceType="granite/ui/components/coral/foundation/heading"
                                                        level="{Long}4"
                                                        text="Link URL [Link to pages on this site. &#xa;For External Links, use format http(s)://www.example.com]">
                                                        <granite:data
                                                            jcr:primaryType="nt:unstructured"
                                                            showhidetargetvalue="buttonRequired"/>
                                                    </linkUrlHeading>
                                                    <linkUrl
                                                        granite:class="list-option-button-showhide-target"
                                                        jcr:primaryType="nt:unstructured"
                                                        sling:resourceType="granite/ui/components/coral/foundation/form/pathfield"
                                                        name="./linkUrl"
                                                        rootPath="/content">
                                                        <granite:data
                                                            jcr:primaryType="nt:unstructured"
                                                            showhidetargetvalue="buttonRequired"/>
                                                    </linkUrl>
                                                    <target
                                                        granite:class="list-option-button-showhide-target"
                                                        jcr:primaryType="nt:unstructured"
                                                        sling:resourceType="granite/ui/components/coral/foundation/form/checkbox"
                                                        name="./targetBlank"
                                                        text="Select to Open Link in New Window"
                                                        uncheckedValue="false"
                                                        value="true">
                                                        <granite:data
                                                            jcr:primaryType="nt:unstructured"
                                                            showhidetargetvalue="buttonRequired"/>
                                                    </target>
                                                </items>
                                            </well>
                                        </items>
                                    </column>
                                </items>
                            </buttonTab>
                            <greyBarTab
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/include"
                                path="/apps/chinational/components/commons/cq_dialog/granite/greyBarTab"/>
                        </items>
                    </tabs>
                </items>
            </column>
        </items>
    </content>
</jcr:root>
