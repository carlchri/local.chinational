<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:granite="http://www.adobe.com/jcr/granite/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="nt:unstructured"
    jcr:title="Audio"
    sling:resourceType="cq/gui/components/authoring/dialog">
    <content
        granite:class="cmp-list--editor"
        jcr:primaryType="nt:unstructured"
        sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns"
        margin="{Boolean}false">
        <items jcr:primaryType="nt:unstructured">
            <column
                jcr:primaryType="nt:unstructured"
                sling:resourceType="granite/ui/components/coral/foundation/container">
                <items jcr:primaryType="nt:unstructured">
                    <tabs
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/coral/foundation/tabs"
                        maximized="{Boolean}false">
                        <items jcr:primaryType="nt:unstructured">
                            <tab
                                jcr:primaryType="nt:unstructured"
                                jcr:title="Audio Settings"
                                sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns"
                                margin="{Boolean}true">
                                <items jcr:primaryType="nt:unstructured">
                                    <column
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/container">
                                        <items jcr:primaryType="nt:unstructured">
                                            <well
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/well">
                                                <items jcr:primaryType="nt:unstructured">
                                                    <sectionHeading
                                                        jcr:primaryType="nt:unstructured"
                                                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                        emptyText="Enter Heading"
                                                        fieldDescription="This text will be used as heading for the audio section"
                                                        fieldLabel="Audio Heading (usually used in media carousel):"
                                                        name="./sectionHeading"/>
                                                    <audioText
                                                        jcr:primaryType="nt:unstructured"
                                                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                        emptyText="Enter Caption"
                                                        fieldDescription="This text will be used as caption for the audio section"
                                                        fieldLabel="Audio Text (usually used in media carousel):"
                                                        name="./audioText"/>
                                                    <audioImage
                                                        jcr:primaryType="nt:unstructured"
                                                        sling:resourceType="granite/ui/components/coral/foundation/form/pathfield"
                                                        fieldDescription="Audio Image"
                                                        fieldLabel="Audio Image (only used in media carousel)"
                                                        name="./audioImage"
                                                        rootPath="/content/dam"/>
                                                    <audioUrl
                                                        jcr:primaryType="nt:unstructured"
                                                        sling:resourceType="granite/ui/components/coral/foundation/form/pathfield"
                                                        fieldDescription="Audio URL"
                                                        fieldLabel="Audio URL"
                                                        name="./audioUrl"
                                                        required="{Boolean}true"
                                                        rootPath="/content/dam"/>
                                                    <backgroundColor
		                                                jcr:primaryType="nt:unstructured"
		                                                sling:resourceType="/apps/chinational/granite/widgets/colorpicker"
		                                                colorsPath="/etc/config/chinational/components/colorpicker/mediacarouselbackgroundcolorpicker"
		                                                fieldDescription="Click on the color box to choose a different color for the media carousel tile background"
		                                                fieldLabel="Background Color (only works when in carousel)"
		                                                freestylePalette="{Boolean}true"
		                                                name="./backgroundColor"/>
                                                </items>
                                            </well>
                                        </items>
                                    </column>
                                </items>
                            </tab>
                            <greyBarTab
                                    jcr:primaryType="nt:unstructured"
                                    sling:resourceType="granite/ui/components/coral/foundation/include"
                                    path="/apps/chinational/components/commons/cq_dialog/granite/greyBarTab"/>
                        </items>
                    </tabs>
                </items>
            </column>
        </items>
    </content>
</jcr:root>
