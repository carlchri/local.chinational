<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:granite="http://www.adobe.com/jcr/granite/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="nt:unstructured"
    jcr:title="Location"
    sling:resourceType="cq/gui/components/authoring/dialog"
    extraClientlibs="[chinational.location.editor]">
    <content
        granite:class="cmp-list--editor chi-location-editDialog"
        jcr:primaryType="nt:unstructured"
        sling:resourceType="granite/ui/components/coral/foundation/container">
        <items jcr:primaryType="nt:unstructured">
            <tabs
                jcr:primaryType="nt:unstructured"
                sling:resourceType="granite/ui/components/coral/foundation/tabs"
                maximized="{Boolean}true">
                <items jcr:primaryType="nt:unstructured">
                    <mainSettingsTab
                        jcr:primaryType="nt:unstructured"
                        jcr:title="General Settings"
                        sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns"
                        margin="{Boolean}false">
                        <items jcr:primaryType="nt:unstructured">
                            <column
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/container">
                                <items jcr:primaryType="nt:unstructured">
                                    <well
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/well">
                                        <items jcr:primaryType="nt:unstructured">
                                            <locationName
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                emptyText="This field is mandatory"
                                                fieldLabel="Location Name"
                                                name="./locationName"
                                                required="{Boolean}true"/>
                                            <iconSelector
                                                jcr:primaryType="nt:unstructured"
                                                sling:orderBefore="orderBy"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/select"
                                                fieldDescription="The location type will dictate the icon that appears inside of the location details."
                                                fieldLabel="Choose Location Type"
                                                name="./locationIcon">
                                                <datasource
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="/apps/chinational/components/datasource"
                                                    path="/etc/config/chinational/components/iconSelectorLocations"/>
                                            </iconSelector>
                                            <selectLocationImageType
                                                granite:class="cq-dialog-dropdown-showhide"
                                                jcr:primaryType="nt:unstructured"
                                                sling:orderBefore="orderBy"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/select"
                                                fieldDescription="Select between an Image and Google Maps to be displayed"
                                                fieldLabel="Location Image"
                                                name="./selectLocationImageType">
                                                <items jcr:primaryType="nt:unstructured">
                                                    <imageLocation
                                                        jcr:primaryType="nt:unstructured"
                                                        selected="{Boolean}true"
                                                        text="Use Image from AEM for Location Image"
                                                        value="imageLocation"/>
                                                    <googleMap
                                                        jcr:primaryType="nt:unstructured"
                                                        text="Use Google Maps for Location Image"
                                                        value="googleMap"/>
                                                </items>
                                                <granite:data
                                                    jcr:primaryType="nt:unstructured"
                                                    cq-dialog-dropdown-showhide-target=".list-option-location-showhide-target"/>
                                            </selectLocationImageType>
                                            <address
                                                granite:class="hide list-option-location-showhide-target"
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                fieldDescription="Address for the location"
                                                fieldLabel="Address"
                                                name="./address">
                                                <granite:data
                                                    jcr:primaryType="nt:unstructured"
                                                    showhidetargetvalue="googleMap"/>
                                            </address>
                                            <addressPlaceId
                                                    granite:class="hide list-option-location-showhide-target"
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                    fieldDescription="Provide a Google Place ID to pull details about the location into the marker pop-up on the map."
                                                    fieldLabel="Address Place ID"
                                                    name="./addressPlaceId">
                                                <granite:data
                                                        jcr:primaryType="nt:unstructured"
                                                        showhidetargetvalue="googleMap"/>
                                            </addressPlaceId>
                                            <addressHidePOI
                                                    granite:class="hide list-option-location-showhide-target"
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/coral/foundation/form/checkbox"
                                                    fieldDescription="Select this checkbox to hide nearby businesses in map."
                                                    text="Hide nearby businesses in map"
                                                    uncheckedValue="false"
                                                    value="true"
                                                    name="./addressHidePOI">
                                            <extrafieldcontainer
                                                    granite:class="hide list-option-location-showhide-target"
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/coral/foundation/container">

                                                <granite:data
                                                        jcr:primaryType="nt:unstructured"
                                                        showhidetargetvalue="googleMap"/>
                                                <items jcr:primaryType="nt:unstructured">
                                                    <address
                                                            jcr:primaryType="nt:unstructured"
                                                            sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                            fieldDescription="Address for the location"
                                                            fieldLabel="Address [used for Google Map]:"
                                                            name="./address" />
                                                    <addressPlaceId
                                                            jcr:primaryType="nt:unstructured"
                                                            sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                            fieldDescription="Place Id to link to correct place, when marker link takes user to google maps site"
                                                            fieldLabel="Address Place Id [used for link to Google Maps from marker pop-up]:"
                                                            name="./addressPlaceId" />
                                                    <addressHidePOI
                                                            jcr:primaryType="nt:unstructured"
                                                            sling:resourceType="granite/ui/components/coral/foundation/form/checkbox"
                                                            fieldDescription="Select this checkbox to hide nearby businesses in map"
                                                            text="Hide nearby businesses in map"
                                                            uncheckedValue="false"
                                                            value="true"
                                                            name="./addressHidePOI" />
                                                </items>
                                            </extrafieldcontainer>
                                            <noDisplayButton
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/checkbox"
                                                fieldDescription="Check this box to disable the link button that will appear at the bottom of the main location details."
                                                name="./noDisplayButton"
                                                text="Hide Location link button"
                                                uncheckedValue="false"
                                                value="true"/>
                                        </items>
                                    </well>
                                </items>
                            </column>
                        </items>
                    </mainSettingsTab>
                    <detailsSettingsTab
                        jcr:primaryType="nt:unstructured"
                        jcr:title="Location Details"
                        sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns"
                        margin="{Boolean}false">
                        <items jcr:primaryType="nt:unstructured">
                            <column
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/container">
                                <items jcr:primaryType="nt:unstructured">
                                    <well
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/well">
                                        <items jcr:primaryType="nt:unstructured">
                                            <locationDetails
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/multifield"
                                                composite="{Boolean}true"
                                                eaem-max-items="4"
                                                fieldDescription="Add Location Detail"
                                                name="./multiCol">
                                                <field
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/coral/foundation/container"
                                                    name="./items">
                                                    <items jcr:primaryType="nt:unstructured">
                                                        <locationText
                                                            jcr:primaryType="nt:unstructured"
                                                            sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                            emptyText="This field is mandatory."
                                                            fieldLabel="Detail text"
                                                            name="./locationText"
                                                            required="{Boolean}true"/>
                                                        <iconSelector
                                                            jcr:primaryType="nt:unstructured"
                                                            sling:orderBefore="orderBy"
                                                            sling:resourceType="granite/ui/components/coral/foundation/form/select"
                                                            fieldDescription="Select the icon for the type of detail to be included. The icon that will appear next to the detail text."
                                                            fieldLabel="Detail Type"
                                                            name="./icon">
                                                            <datasource
                                                                jcr:primaryType="nt:unstructured"
                                                                sling:resourceType="/apps/chinational/components/datasource"
                                                                path="/etc/config/chinational/components/iconSelector"/>
                                                        </iconSelector>
                                                        <linkUrl
                                                            jcr:primaryType="nt:unstructured"
                                                            sling:resourceType="granite/ui/components/coral/foundation/form/pathfield"
                                                            fieldDescription="Location details will be clickable. Use this format for external links: https://www.example.com"
                                                            fieldLabel="AEM path or external URL"
                                                            name="./linkUrl"
                                                            rootPath="/content/dam"/>
                                                        <target
                                                            jcr:primaryType="nt:unstructured"
                                                            sling:resourceType="granite/ui/components/coral/foundation/form/checkbox"
                                                            fieldDescription="Selecting this checkbox will open link in new window."
                                                            name="./targetBlank"
                                                            text="Select to Open Link in New Window"
                                                            uncheckedValue="false"
                                                            value="true"/>
                                                    </items>
                                                </field>
                                            </locationDetails>
                                        </items>
                                    </well>
                                </items>
                            </column>
                        </items>
                    </detailsSettingsTab>
                    <detailsBoxTab
                        jcr:primaryType="nt:unstructured"
                        jcr:title="Additional Details"
                        sling:resourceType="granite/ui/components/coral/foundation/fixedcolumns"
                        margin="{Boolean}false">
                        <items jcr:primaryType="nt:unstructured">
                            <column
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/container">
                                <items jcr:primaryType="nt:unstructured">
                                    <well
                                        jcr:primaryType="nt:unstructured"
                                        sling:resourceType="granite/ui/components/coral/foundation/well">
                                        <items jcr:primaryType="nt:unstructured">
                                            <selectDetailsBox
                                                    granite:class="cq-dialog-dropdown-showhide"
                                                jcr:primaryType="nt:unstructured"
                                                sling:orderBefore="orderBy"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/select"
                                                fieldDescription="Pick appropriate option to enable or disable details box"
                                                fieldLabel="Options for Details Box"
                                                name="./detailsBoxOption">
                                                <items jcr:primaryType="nt:unstructured">
                                                    <enable
                                                        jcr:primaryType="nt:unstructured"
                                                        text="Enable Location Details Box "
                                                        value="enable"/>
                                                    <disable
                                                        jcr:primaryType="nt:unstructured"
                                                        text="Disable Location Details Box"
                                                        selected="{Boolean}true"
                                                        value="disable"/>
                                                </items>
                                                <granite:data
                                                        jcr:primaryType="nt:unstructured"
                                                        cq-dialog-dropdown-showhide-target=".list-option-detailsbox-showhide-target"/>
                                            </selectDetailsBox>
                                            <detailsBoxHeading
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                emptyText="Enter heading for Location Details Box"
                                                fieldLabel="Additional Details Heading"
                                                name="./detailsBoxHeading"
                                                wrapperClass="chi-location-details-box-heading"/>
                                            <locationDescription
                                                jcr:primaryType="nt:unstructured"
                                                sling:resourceType="cq/gui/components/authoring/dialog/richtext"
                                                useFixedInlineToolbar="{Boolean}true"
                                                emptyText="Enter description for location."
                                                fieldLabel="Additional Details"
                                                name="./locDescription"
                                                wrapperClass="chi-location-description">
                                                <rtePlugins jcr:primaryType="nt:unstructured">
                                                    <format
                                                            jcr:primaryType="nt:unstructured"
                                                            features="*"/>
                                                    <justify
                                                            jcr:primaryType="nt:unstructured"
                                                            features="*"/>
                                                    <misctools
                                                            jcr:primaryType="nt:unstructured"
                                                            features="*"/>
                                                </rtePlugins>
                                            </locationDescription>
                                            <extrafieldcontainer
                                                    granite:class="hide list-option-detailsbox-showhide-target"
                                                    jcr:primaryType="nt:unstructured"
                                                    sling:resourceType="granite/ui/components/coral/foundation/container">
                                                <granite:data
                                                    jcr:primaryType="nt:unstructured"
                                                    showhidetargetvalue="enable"/>
                                                <items jcr:primaryType="nt:unstructured">
                                                    <detailsBoxHeading
                                                        jcr:primaryType="nt:unstructured"
                                                        sling:resourceType="granite/ui/components/coral/foundation/form/textfield"
                                                        emptyText="Enter heading for Location Details Box"
                                                        fieldDescription="Enter heading for Location Details Box"
                                                        fieldLabel="Location Details Box Heading"
                                                        name="./detailsBoxHeading"
                                                        />
                                                    <locationDescription
                                                        jcr:primaryType="nt:unstructured"
                                                        sling:resourceType="cq/gui/components/authoring/dialog/richtext"
                                                        useFixedInlineToolbar="{Boolean}true"
                                                        emptyText="Enter description for location."
                                                        fieldDescription="Enter description for location."
                                                        fieldLabel="Location Description:"
                                                        name="./locDescription"
                                                        wrapperClass="chi-location-description">
                                                        <rtePlugins jcr:primaryType="nt:unstructured">
                                                            <format
                                                                    jcr:primaryType="nt:unstructured"
                                                                    features="*"/>
                                                            <justify
                                                                    jcr:primaryType="nt:unstructured"
                                                                    features="*"/>
                                                            <misctools
                                                                    jcr:primaryType="nt:unstructured"
                                                                    features="*"/>
                                                        </rtePlugins>
                                                    </locationDescription>
                                                </items>
                                            </extrafieldcontainer>
                                        </items>
                                    </well>
                                </items>
                            </column>
                        </items>
                    </detailsBoxTab>
                    <greyBarTab
                     jcr:primaryType="nt:unstructured"
                     sling:resourceType="granite/ui/components/coral/foundation/include"
                     path="/apps/chinational/components/commons/cq_dialog/granite/greyBarTab"/>
                </items>
            </tabs>
        </items>
    </content>
</jcr:root>
